@code {
    [Inject] private AppDbContext Db { get; set; } = null!;
    [Inject] private Group5.Services.Interfaces.IInventoryService InventoryService { get; set; } = null!;
    
    private string displayedUsername = string.Empty;
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private List<CartItem>? cartItems;
    private List<InventoryItem> itemLimits = new();
    private bool editing = false;
    private string cartMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è Cart: No session email found; redirecting to login (/).");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedUsername = UserSession.Username;
        displayedEmail = UserSession.Email;
        
        // Load cart items for this user
        await LoadCartAsync();
            
        Console.WriteLine($"‚úÖ Cart loaded. Logged in as: {displayedUsername}");
    }

    private async Task LoadCartAsync()
    {
        cartItems = await Db.CartItems
            .Where(item => item.UserEmail == UserSession.Email)
            .ToListAsync();

        // Load inventory limits for validation
        if (cartItems != null && cartItems.Any())
        {
            var departments = cartItems.Select(c => c.Department).Distinct().ToList();
            itemLimits = new List<InventoryItem>();
            
            foreach (var dept in departments)
            {
                var deptItems = await InventoryService.GetDepartmentInventoryAsync(dept);
                itemLimits.AddRange(deptItems);
            }
        }
    }

    private async Task IncreaseQuantity(int cartItemId)
    {
        var cartItem = cartItems?.FirstOrDefault(c => c.Id == cartItemId);
        if (cartItem == null) return;

        var result = await InventoryService.UpdateCartQuantityAsync(
            cartItemId, 
            UserSession.Email, 
            cartItem.Quantity + 1);

        if (result.Success)
        {
            await LoadCartAsync();
            cartMessage = "‚úÖ Quantity updated!";
        }
        else
        {
            cartMessage = $"‚ùå {result.Message}";
        }

        StateHasChanged();
        
        // Clear message after 3 seconds
        _ = Task.Delay(3000).ContinueWith(_ => 
        {
            cartMessage = string.Empty;
            StateHasChanged();
        });
    }

    private async Task DecreaseQuantity(int cartItemId)
    {
        var cartItem = cartItems?.FirstOrDefault(c => c.Id == cartItemId);
        if (cartItem == null || cartItem.Quantity <= 1) return;

        var result = await InventoryService.UpdateCartQuantityAsync(
            cartItemId, 
            UserSession.Email, 
            cartItem.Quantity - 1);

        if (result.Success)
        {
            await LoadCartAsync();
            cartMessage = "‚úÖ Quantity updated!";
        }
        else
        {
            cartMessage = $"‚ùå {result.Message}";
