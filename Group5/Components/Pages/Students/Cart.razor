@page "/cart"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@using Group5.Shared
@using Group5.Data
@using Group5.Models
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Hello, @displayedUsername!</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/studentdashboard" class="nav-item">Dashboard</a>
            <a href="/studentborrow" class="nav-item">Borrow</a>
            <a href="/cart" class="nav-item active">Cart</a>
            <a href="/studenthistory" class="nav-item">History</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üõí</span> CART</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        @if (cartItems == null)
        {
            <p><em>Loading...</em></p>
        }
        else if (!cartItems.Any())
        {
            <div class="empty-cart">
                <p>Your cart is empty.</p>
            </div>
        }
        else
        {
            @if (!string.IsNullOrEmpty(cartMessage))
            {
                <div class="cart-message @(cartMessage.StartsWith("‚úÖ") ? "success" : "error")">
                    @cartMessage
                </div>
            }

            <div class="cart-table-container">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Department</th>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <th>Max Allowed</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in cartItems)
                        {
                            var inventoryInfo = itemLimits.FirstOrDefault(i => i.ItemName == item.ItemName && i.Department == item.Department);
                            <tr>
                                <td><div class="dept-badge">@GetDepartmentShortName(item.Department)</div></td>
                                <td><strong>@item.ItemName</strong></td>
                                <td>
                                    @if (editing)
                                    {
                                        <div class="quantity-controls">
                                            <button class="qty-btn" @onclick="() => DecreaseQuantity(item.Id)" disabled="@(item.Quantity <= 1)">‚àí</button>
                                            <span class="qty-display">@item.Quantity</span>
                                            <button class="qty-btn" @onclick="() => IncreaseQuantity(item.Id)" 
                                                    disabled="@(inventoryInfo != null && item.Quantity >= inventoryInfo.MaxPerStudent)">+</button>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="qty-static">@item.Quantity</span>
                                    }
                                </td>
                                <td>
                                    @if (inventoryInfo != null)
                                    {
                                        <span class="max-info">@inventoryInfo.MaxPerStudent</span>
                                    }
                                    else
                                    {
                                        <span class="max-info">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (editing)
                                    {
                                        <button class="btn-delete" @onclick="() => DeleteItem(item.Id)">üóëÔ∏è Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="cart-summary">
                <div class="summary-info">
                    <span>Total Items: <strong>@cartItems.Sum(i => i.Quantity)</strong></span>
                    <span>Total Types: <strong>@cartItems.Count</strong></span>
                </div>
            </div>

            <div class="cart-actions">
                <button class="btn-edit" @onclick="ToggleEdit">@((editing ? "‚úì Done Editing" : "‚úèÔ∏è Edit Cart"))</button>
                <button class="btn-confirm" @onclick="ConfirmCart" disabled="@editing">üìã PROCEED TO BORROW</button>
            </div>
        }
    </main>
</div>

<style>
