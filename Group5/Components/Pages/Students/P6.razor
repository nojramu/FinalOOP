@page "/physics"
@using Group5.Shared
@using Group5.Data
@using Group5.Models
@using Group5.Core.Base
@using Microsoft.AspNetCore.Components.Web
@inherits BaseToolroomPage
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Hello, @displayedUsername!</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/studentdashboard" class="nav-item">Dashboard</a>
            <a href="/studentborrow" class="nav-item active">Borrow</a>
            <a href="/cart" class="nav-item">Cart</a>
            <a href="/studenthistory" class="nav-item">History</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">‚öõÔ∏è</span> PHYSICS LABORATORY TOOLROOM</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <section class="information">
            <h3>üì¢ Physics Laboratory Toolroom</h3>
            <p>
                Welcome to the Physics Laboratory Toolroom! This facility provides precision measurement instruments and experimental apparatus for physics students. Our collection includes tools for mechanics, optics, thermodynamics, and electromagnetism experiments. Equipment ranges from basic measurement tools like meter sticks and vernier calipers to specialized instruments like optical benches and force meters. All instruments are calibrated for accuracy. Handle measurement tools with care to maintain their precision, and report any discrepancies immediately.
            </p>
        </section>

        <section class="item-cards">
            @foreach (var item in items)
            {
                <div @onclick="@(() => OpenModal(item))" @onclick:stopPropagation="true" @onclick:preventDefault="true" class="item-card" style="cursor: pointer;">
                    <div class="item-image">
                        <img src="@item.GetImagePath()" alt="@item.Name" />
                    </div>
                    <h3>@item.Name</h3>
                </div>
            }
        </section>
    </main>
</div>

@if (showModal && selectedItem != null)
{
    <div class="modal-overlay" @onclick="CloseModal"></div>
    <div class="modal-container">
        <button class="modal-close" @onclick="CloseModal">√ó</button>
        <div class="modal-image-placeholder">
            <img src="@selectedItem.GetImagePath()" alt="@selectedItem.Name" class="modal-item-image" />
        </div>
        <div class="modal-item-name">@selectedItem.Name</div>
        <div class="modal-description">
            <p><strong>Description:</strong> @selectedItem.Description</p>
            <p><em>Please handle with care and return in proper condition after use. Report any damage or malfunction immediately to the toolroom administrator.</em></p>
        </div>
        <div class="modal-availability">
            <span class="availability-label">AVAILABLE:</span>
            <span class="availability-count">@selectedItem.Available</span>
        </div>
        <div class="modal-quantity">
            <label>QUANTITY</label>
            <div class="quantity-controls">
                <button class="quantity-btn" @onclick="DecreaseQuantity" disabled="@(selectedQuantity <= 1)">-</button>
                <input type="number" class="quantity-input" @bind="selectedQuantity" @bind:event="oninput" min="1" max="@selectedItem.MaxPerStudent" />
                <button class="quantity-btn" @onclick="IncreaseQuantity" disabled="@(selectedQuantity >= selectedItem.MaxPerStudent || selectedQuantity >= selectedItem.Available)">+</button>
            </div>
            <div class="quantity-limit">*max @selectedItem.MaxPerStudent per student</div>
        </div>
        <button class="add-to-cart-btn" @onclick="AddToCart">ADD TO CART</button>
    </div>
}

<style>
/* === Layout === */
.layout {
    display: flex;
    min-height: 100vh;
    font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
    margin: 0;
    padding: 0;
    position: relative;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
}

/* === Sidebar === */
.sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: 280px;
    height: 100vh;
    background: linear-gradient(180deg, #9B1B30 0%, #6B0F1A 50%, #4A0000 100%);
    color: white;
    display: flex;
    flex-direction: column;
    padding: 0;
    box-shadow: 6px 0 32px rgba(0, 0, 0, 0.25);
    overflow-y: auto;
    z-index: 100;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
}

.profile-section {
    text-align: center;
    padding: 40px 30px 32px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
}

.profile-section::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
    border-radius: 2px;
}

.profile-section h3 {
    margin: 0 0 20px 0;
    font-size: 1.1rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    opacity: 0.9;
    color: #ffffff;
}

.profile-pic {
    width: 120px;
    height: 120px;
    margin: 0 auto 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    padding: 15px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.profile-pic::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    padding: 2px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.1));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
}

.profile-pic:hover {
    transform: scale(1.08);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
}

.profile-pic:hover::before {
    opacity: 1;
}

.logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
}

.logout-btn {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
    color: #8B0000;
    border: none;
    border-radius: 10px;
    padding: 12px 24px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    letter-spacing: 0.5px;
    text-transform: uppercase;
    position: relative;
    overflow: hidden;
}

.logout-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(139, 0, 0, 0.1);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.logout-btn:hover::before {
    width: 300px;
    height: 300px;
}

.logout-btn:hover {
    background: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.3);
}

.logout-btn:active {
    transform: translateY(0);
}

.nav-menu {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 24px 20px;
}

.nav-item {
    display: flex;
    align-items: center;
    background: transparent;
    color: rgba(255, 255, 255, 0.8);
    padding: 16px 20px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-left: 3px solid transparent;
    position: relative;
    overflow: hidden;
}

.nav-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.4));
    transform: scaleY(0);
    transition: transform 0.3s ease;
}

.nav-item::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    width: 6px;
    height: 6px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    transform: translate(10px, -50%) scale(0);
    transition: transform 0.3s ease;
}

.nav-item:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.12);
    padding-left: 28px;
    box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.05);
}

.nav-item:hover::before {
    transform: scaleY(1);
}

.nav-item:hover::after {
    transform: translate(-12px, -50%) scale(1);
}

.nav-item.active {
    color: #ffffff;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
    padding-left: 28px;
    box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.2), 0 0 20px rgba(255, 255, 255, 0.1);
    border-left-color: #ffffff;
}

.nav-item.active::before {
    transform: scaleY(1);
}

.nav-item.active::after {
    transform: translate(-12px, -50%) scale(1);
    background: #ffffff;
}

.footer-links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    text-align: center;
    padding: 24px 30px 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.2) 0%, transparent 100%);
    position: relative;
}

.footer-links::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
    border-radius: 2px;
}

.footer-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 10px 20px;
    border-radius: 8px;
    letter-spacing: 0.5px;
}

.footer-links a:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}

/* === Main Content === */
.main-content {
    flex: 1;
    margin-left: 280px;
    padding: 40px 60px;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
    overflow-y: auto;
    position: relative;
    min-height: 100vh;
}

.top-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    background: linear-gradient(135deg, #9B1B30 0%, #C41E3A 50%, #8B0000 100%);
    padding: 24px 32px;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(155, 27, 48, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.top-header h1 {
    font-size: 2rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 14px;
    margin: 0;
    color: #ffffff;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.top-header .icon {
    font-size: 2rem;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.4));
}

.email {
    color: #ffffff;
    font-weight: 600;
    font-size: 0.95rem;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    letter-spacing: 0.01em;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.divider {
    display: none;
}

/* === Information Section === */
.information {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    color: #1a1a2e;
    border-radius: 16px;
    padding: 28px 32px;
    margin-bottom: 32px;
    box-shadow: 0 8px 24px rgba(251, 191, 36, 0.25);
    border: 1px solid rgba(245, 158, 11, 0.3);
    transition: all 0.3s ease;
}

.information:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(251, 191, 36, 0.35);
}

.information h3 {
    margin: 0 0 12px 0;
    font-size: 1.25rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 8px;
    color: #7c2d12;
}

.information p {
    margin: 0;
    line-height: 1.6;
    font-size: 1rem;
    color: #78350f;
    font-weight: 500;
}

/* === Item Cards === */
.item-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16px;
}

.item-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    color: #1a1a2e;
    border-radius: 12px;
    padding: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    border: 2px solid #e9ecef;
    aspect-ratio: 1;
    min-width: 0;
    position: relative;
    overflow: hidden;
}

.item-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #9B1B30 0%, #C41E3A 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
}

.item-card:hover::before {
    opacity: 1;
}

.item-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 32px rgba(155, 27, 48, 0.25);
    border-color: transparent;
}

.item-image {
    width: 100%;
    height: 200px;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 8px;
    margin-bottom: 14px;
    position: relative;
    z-index: 1;
    transition: all 0.4s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.item-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
}

.item-card:hover .item-image {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
}

.item-card:hover .item-image img {
    transform: scale(1.05);
}

.item-card h3 {
    margin: 0;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    text-align: center;
    line-height: 1.3;
    position: relative;
    z-index: 1;
    transition: color 0.4s ease;
    letter-spacing: -0.01em;
    flex-shrink: 0;
    padding: 0 8px;
}

.item-card:hover h3 {
    color: white;
}

/* === Modal Styles === */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1000;
    backdrop-filter: blur(8px);
    animation: fadeIn 0.3s ease;
}

.modal-container {
    position: fixed;
    top: 50%;
    right: 50px;
    transform: translateY(-50%);
    width: 420px;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border-radius: 20px;
    padding: 32px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    z-index: 1001;
    display: flex;
    flex-direction: column;
    gap: 18px;
    border: 1px solid rgba(255, 255, 255, 0.8);
    animation: slideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-50%) translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateY(-50%) translateX(0);
    }
}

.modal-close {
    position: absolute;
    top: 18px;
    right: 18px;
    background: linear-gradient(135deg, #9B1B30 0%, #C41E3A 100%);
    color: white;
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    font-size: 1.6rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(155, 27, 48, 0.3);
}

.modal-close:hover {
    background: linear-gradient(135deg, #C41E3A 0%, #8B0000 100%);
    transform: scale(1.15) rotate(90deg);
    box-shadow: 0 6px 20px rgba(155, 27, 48, 0.5);
}

.modal-image-placeholder {
    width: 100%;
    margin-top: 12px;
    height: 220px;
    background-color: white;
    border: 3px solid #e9ecef;
    border-radius: 12px;
    box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-item-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

.modal-item-name {
    background: linear-gradient(135deg, #9B1B30 0%, #C41E3A 100%);
    color: white;
    padding: 16px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.25rem;
    text-align: center;
    box-shadow: 0 4px 16px rgba(155, 27, 48, 0.25);
    letter-spacing: -0.01em;
}

.modal-description {
    background: #f8f9fa;
    padding: 18px;
    border-radius: 12px;
    min-height: 90px;
    border: 1px solid #e9ecef;
}

.modal-description p {
    margin: 6px 0;
    color: #374151;
    font-size: 0.95rem;
    line-height: 1.5;
}

.modal-availability {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 18px;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    border-radius: 12px;
    border: 2px solid #e9ecef;
}

.availability-label {
    font-weight: 700;
    color: #1a1a2e;
    font-size: 0.95rem;
}

.availability-count {
    font-weight: 700;
    color: #9B1B30;
    font-size: 1.4rem;
}

.modal-quantity {
    background: #f8f9fa;
    padding: 18px;
    border-radius: 12px;
    border: 1px solid #e9ecef;
}

.modal-quantity label {
    display: block;
    font-weight: 700;
    color: #1a1a2e;
    margin-bottom: 12px;
    font-size: 0.95rem;
}

.quantity-controls {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 10px;
}

.quantity-btn {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #9B1B30 0%, #C41E3A 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.3rem;
    font-weight: 700;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(155, 27, 48, 0.2);
}

.quantity-btn:hover:not(:disabled) {
    background: linear-gradient(135deg, #C41E3A 0%, #8B0000 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(155, 27, 48, 0.35);
}

.quantity-btn:disabled {
    background: #d1d5db;
    cursor: not-allowed;
    opacity: 0.5;
    box-shadow: none;
}

.quantity-input {
    width: 70px;
    height: 40px;
    text-align: center;
    border: 2px solid #9B1B30;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 700;
    color: #1a1a2e;
}

.quantity-limit {
    font-size: 0.85rem;
    color: #9B1B30;
    font-weight: 600;
}

.add-to-cart-btn {
    width: 100%;
    padding: 16px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.15rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 8px;
    box-shadow: 0 4px 16px rgba(16, 185, 129, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.add-to-cart-btn:hover {
    background: linear-gradient(135deg, #059669 0%, #047857 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(16, 185, 129, 0.4);
}

/* === Responsive Design === */
@@media (max-width: 1400px) {
    .item-cards {
        grid-template-columns: repeat(3, 1fr);
    }
}

@@media (max-width: 1024px) {
    .sidebar {
        width: 260px;
    }
    
    .main-content {
        margin-left: 260px;
        padding: 30px 40px;
    }
    
    .item-cards {
        grid-template-columns: repeat(3, 1fr);
    }
}

@@media (max-width: 768px) {
    .sidebar {
        width: 100%;
        height: auto;
        position: relative;
    }
    
    .main-content {
        margin-left: 0;
        padding: 20px;
    }
    
    .top-header {
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
    }
    
    .profile-pic {
        width: 100px;
        height: 100px;
    }
    
    .nav-item {
        font-size: 0.9rem;
        padding: 14px 18px;
    }
    
    .item-cards {
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }
    
    .modal-container {
        right: 20px;
        left: 20px;
        width: auto;
        max-width: 400px;
    }
}

@@media (max-width: 480px) {
    .item-cards {
        grid-template-columns: 1fr;
    }
}

/* === Animations === */
@@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.item-card {
