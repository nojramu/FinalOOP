@page "/studenthistory"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject Group5.Data.AppDbContext Db
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Hello, @displayedUsername!</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/studentdashboard" class="nav-item">Dashboard</a>
            <a href="/studentborrow" class="nav-item">Borrow</a>
            <a href="/cart" class="nav-item">Cart</a>
            <a href="/studenthistory" class="nav-item active">History</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üìã</span> BORROW HISTORY</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <section class="history-section">
            @if (MyHistoryForms.Any())
            {
                <div class="history-list">
                    @foreach (var form in MyHistoryForms)
                    {
                        var statusClass = GetStatusClass(form);
                        var statusText = GetStatusText(form);

                        <div class="history-card @statusClass">
                            <div class="history-header">
                                <div class="reference-code">
                                    <strong>Reference:</strong> <code>@form.ReferenceCode</code>
                                </div>
                                <div class="status-badge @statusClass">@statusText</div>
                            </div>

                            <div class="history-details">
                                <div class="detail-row">
                                    <div class="detail-item">
                                        <span class="detail-label">Professor Assigned:</span>
                                        <span class="detail-value">@form.ProfessorEmail</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Submitted:</span>
                                        <span class="detail-value">@form.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</span>
                                    </div>
                                </div>

                                @if (form.ProcessedAt.HasValue)
                                {
                                    <div class="detail-row">
                                        <div class="detail-item">
                                            <span class="detail-label">Processed:</span>
                                            <span class="detail-value">@form.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(form.ProcessedBy))
                                        {
                                            <div class="detail-item">
                                                <span class="detail-label">Processed By:</span>
                                                <span class="detail-value">@form.ProcessedBy</span>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>

                            @if (form.Items.Any())
                            {
                                <div class="items-section">
                                    <strong>Borrowed Items:</strong>
                                    <ul class="items-list">
                                        @foreach (var item in form.Items)
                                        {
                                            <li>@item.Department: @item.ItemName √ó @item.Quantity</li>
                                        }
                                    </ul>
                                </div>
                            }

                            <div class="timeline">
                                <div class="timeline-item completed">
                                    <span class="timeline-icon">‚úì</span>
                                    <span class="timeline-text">Submitted</span>
                                </div>
                                <div class="timeline-item @(form.IsApproved.HasValue ? "completed" : "")">
                                    <span class="timeline-icon">@(form.IsApproved == true ? "‚úì" : form.IsApproved == false ? "‚úó" : "‚óã")</span>
                                    <span class="timeline-text">@(form.IsApproved == true ? "Approved" : form.IsApproved == false ? "Disapproved" : "Awaiting Approval")</span>
                                </div>
                                @if (form.IsApproved == true)
                                {
                                    <div class="timeline-item @(form.IsIssued ? "completed" : "")">
                                        <span class="timeline-icon">@(form.IsIssued ? "‚úì" : "‚óã")</span>
                                        <span class="timeline-text">@(form.IsIssued ? "Issued" : "Awaiting Issue")</span>
                                    </div>
                                    @if (form.IsIssued)
                                    {
                                        <div class="timeline-item @(form.IsReturned ? "completed" : "")">
                                            <span class="timeline-icon">@(form.IsReturned ? "‚úì" : "‚óã")</span>
                                            <span class="timeline-text">@(form.IsReturned ? "Returned" : "Not Returned")</span>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-history">
                    <p>üì≠ No borrow history yet.</p>
                    <p>Visit the <a href="/studentborrow">Borrow</a> page to get started!</p>
                </div>
            }
        </section>
    </main>
</div>

