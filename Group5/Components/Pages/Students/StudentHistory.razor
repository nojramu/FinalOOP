@code {
    private string displayedUsername = string.Empty;
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private List<BorrowForm> MyHistoryForms = new();

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è StudentHistory: No session email found; redirecting to login (/).");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedUsername = UserSession.Username;
        displayedEmail = UserSession.Email;
        
        // Load history from database
        await LoadHistoryAsync();
        
        Console.WriteLine($"‚úÖ StudentHistory loaded. Logged in as: {displayedUsername}");
    }

    private async Task LoadHistoryAsync()
    {
        try
        {
            MyHistoryForms = await Db.BorrowForms
                .Include(f => f.Items)
                .Where(f => f.StudentEmail == UserSession.Email)
                .OrderByDescending(f => f.SubmittedAt)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading history: {ex.Message}");
        }
    }

    private string GetStatusClass(BorrowForm form)
    {
        if (form.IsReturned) return "returned";
        if (form.IsApproved == true && form.IsIssued) return "approved";
        if (form.IsApproved == false) return "disapproved";
        return "pending";
    }

    private string GetStatusText(BorrowForm form)
    {
        if (form.IsReturned) return "üîÑ Returned";
        if (form.IsApproved == true && form.IsIssued) return "üì¶ Issued";
        if (form.IsApproved == true && !form.IsIssued) return "‚úÖ Approved";
        if (form.IsApproved == false) return "‚ùå Disapproved";
        return "üïí Pending";
    }

    private async Task LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            Console.WriteLine("üö™ StudentHistory: LogoutAsync invoked (SERVER side). Clearing session...");

            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;

            try
            {
                await JS.InvokeVoidAsync("console.log", "üö™ StudentHistory: Logout clicked (CLIENT side) - clearing session & redirecting to /");
            }
            catch
            {
                // ignore any JS error here
            }

            try
            {
                Navigation.NavigateTo("/", forceLoad: false);
            }
            catch (Exception navEx)
            {
                Console.WriteLine($"‚ö†Ô∏è Navigation.NavigateTo threw: {navEx.Message}");
            }

            try
            {
                await JS.InvokeVoidAsync("eval", "window.location.href = '/'");
            }
            catch (Exception jsEx)
            {
                Console.WriteLine($"‚ö†Ô∏è Hard redirect via JS failed: {jsEx.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå LogoutAsync error: {ex.Message}");
            try
            {
                await JS.InvokeVoidAsync("eval", "window.location.href = '/'");
            }
            catch { }
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}
