@code {
    private string displayedUsername = string.Empty;
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private int? expandedFormId = null;

    private List<BorrowForm> PendingForms = new();
    private List<BorrowForm> CurrentlyBorrowedForms = new();
    private BorrowForm? latestApproval = null;
    private BorrowForm? latestDisapproval = null;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è StudentDashboard: No session email found; redirecting to login (/).");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedUsername = UserSession.Username;
        displayedEmail = UserSession.Email;
        
        // Load borrow forms from database
        await LoadFormsAsync();
        
        Console.WriteLine($"‚úÖ StudentDashboard loaded. Logged in as: {displayedUsername}");
    }

    private async Task LoadFormsAsync()
    {
        try
        {
            var allForms = await Db.BorrowForms
                .Include(f => f.Items)
                .Where(f => f.StudentEmail == UserSession.Email)
                .OrderByDescending(f => f.SubmittedAt)
                .ToListAsync();

            PendingForms = allForms
                .Where(f => f.IsApproved == null)
                .ToList();

            CurrentlyBorrowedForms = allForms
                .Where(f => f.IsApproved == true && f.IsIssued == true && f.IsReturned == false)
                .OrderByDescending(f => f.ProcessedAt)
                .ToList();

            latestApproval = allForms
                .Where(f => f.IsApproved == true && !UserDatabase.IsDismissed(UserSession.Email, f.Id))
                .OrderByDescending(f => f.ProcessedAt)
                .FirstOrDefault();

            latestDisapproval = allForms
                .Where(f => f.IsApproved == false && !UserDatabase.IsDismissed(UserSession.Email, f.Id))
                .OrderByDescending(f => f.ProcessedAt)
                .FirstOrDefault();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading forms: {ex.Message}");
        }
    }

