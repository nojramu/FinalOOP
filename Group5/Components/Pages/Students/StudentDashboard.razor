<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Hello, @displayedUsername!</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/studentdashboard" class="nav-item active">Dashboard</a>
            <a href="/studentborrow" class="nav-item">Borrow</a>
            <a href="/cart" class="nav-item">Cart</a>
            <a href="/studenthistory" class="nav-item">History</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üìä</span> DASHBOARD</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <!-- Notice Section -->
        <section class="notice">
            <h3>üì¢ Notice:</h3>
            <p>@UserDatabase.Notice</p>
        </section>

        <!-- Status Update Section -->
        <section class="status-section">
            <h3>üìã Status</h3>

            <!-- Pending Forms -->
            @if (PendingForms.Any())
            {
                <div class="status-card pending">
                    <h4>üïí Pending Forms (@PendingForms.Count)</h4>
                    @foreach (var form in PendingForms)
                    {
                        <div class="form-item">
                            <div class="form-header">
                                <strong>Ref:</strong> <code>@form.ReferenceCode</code> | 
                                <strong>Submitted:</strong> @form.SubmittedAt.ToString("MM/dd HH:mm")
                            </div>
                            @if (form.Items.Any())
                            {
                                <button class="toggle-btn" @onclick="@(() => ToggleExpand(form.Id))">
                                    @(expandedFormId == form.Id ? "‚ñ≤ Hide Items" : "‚ñº View Items")
                                </button>
                                @if (expandedFormId == form.Id)
                                {
                                    <div class="form-items">
                                        <strong>Items:</strong>
                                        @foreach (var group in form.Items.GroupBy(i => i.Department))
                                        {
                                            <div><em>@group.Key:</em> @string.Join(", ", group.Select(i => $"{i.ItemName}√ó{i.Quantity}"))</div>
                                        }
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
            }

            <!-- Currently Borrowed -->
            @if (CurrentlyBorrowedForms.Any())
            {
                <div class="status-card borrowed">
                    <h4>üì¶ Currently Borrowed (@CurrentlyBorrowedForms.Count form(s))</h4>
                    @foreach (var form in CurrentlyBorrowedForms)
                    {
                        <div class="form-item">
                            <div class="form-header">
                                <strong>Ref:</strong> <code>@form.ReferenceCode</code> | 
                                <strong>Issued:</strong> @form.ProcessedAt?.ToString("MM/dd HH:mm")
                            </div>
                            @if (form.Items.Any())
                            {
                                <button class="toggle-btn" @onclick="@(() => ToggleExpand(form.Id))">
                                    @(expandedFormId == form.Id ? "‚ñ≤ Hide Items" : "‚ñº View Items")
                                </button>
                                @if (expandedFormId == form.Id)
                                {
                                    <div class="form-items">
                                        <strong>Items:</strong>
                                        @foreach (var group in form.Items.GroupBy(i => i.Department))
                                        {
                                            <div><em>@group.Key:</em> @string.Join(", ", group.Select(i => $"{i.ItemName}√ó{i.Quantity}"))</div>
                                        }
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
            }

            @if (!PendingForms.Any() && !CurrentlyBorrowedForms.Any())
            {
                <p class="empty-status">üì≠ No pending forms or borrowed items.</p>
            }
        </section>

        <!-- Notifications Section -->
        <section class="notifications-section">
            <h3>üîî Notifications</h3>
            @if (latestApproval != null && !UserDatabase.IsDismissed(UserSession.Email, latestApproval.Id))
            {
                <div class="notification-card approval">
                    <strong>üéâ Your form has been approved!</strong><br />
                    Reference: <code>@latestApproval.ReferenceCode</code><br />
                    Approved by: @latestApproval.ProfessorEmail on @latestApproval.ProcessedAt?.ToString("yyyy-MM-dd HH:mm")<br />
                    <button class="dismiss-btn" @onclick="@(() => DismissBanner(latestApproval.Id))">OK</button>
                </div>
            }
            else if (latestDisapproval != null && !UserDatabase.IsDismissed(UserSession.Email, latestDisapproval.Id))
            {
                <div class="notification-card disapproval">
                    <strong>‚ö†Ô∏è Your form has been disapproved.</strong><br />
                    Reference: <code>@latestDisapproval.ReferenceCode</code><br />
                    Disapproved by: @latestDisapproval.ProfessorEmail on @latestDisapproval.ProcessedAt?.ToString("yyyy-MM-dd HH:mm")<br />
                    <button class="dismiss-btn" @onclick="@(() => DismissBanner(latestDisapproval.Id))">OK</button>
                </div>
            }
            else
            {
                <p class="empty-notification">No recent notifications.</p>
            }
        </section>
    </main>
