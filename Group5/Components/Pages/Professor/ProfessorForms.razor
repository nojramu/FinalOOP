@page "/professorforms"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject Group5.Data.AppDbContext Db
@inject Group5.Services.Interfaces.IInventoryService InventoryService
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Hello, @displayedUsername!</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/professordashboard" class="nav-item">Dashboard</a>
            <a href="/professorforms" class="nav-item active">Pending Forms</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üìù</span> PENDING BORROW FORMS</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <!-- Tab Navigation -->
        <div class="tab-nav">
            <button class="tab-btn @(activeTab == "pending" ? "active" : "")" @onclick='@(() => activeTab = "pending")'>
                Pending Forms
            </button>
            <button class="tab-btn @(activeTab == "history" ? "active" : "")" @onclick='@(() => activeTab = "history")'>
                History
            </button>
        </div>

        @if (activeTab == "pending")
        {
            <section class="forms-section">
                @if (MyPendingForms.Any())
                {
                    <div class="forms-list">
                        @foreach (var form in MyPendingForms)
                        {
                            <div class="form-card">
                                <div class="form-header">
                                    <div class="reference">
                                        <strong>Ref:</strong> <code>@form.ReferenceCode</code>
                                    </div>
                                    <div class="date">
                                        @form.SubmittedAt.ToString("yyyy-MM-dd HH:mm")
                                    </div>
                                </div>

                                <div class="form-details">
                                    <div class="detail-row">
                                        <div class="detail-item">
                                            <span class="label">Student:</span>
                                            <span class="value">@form.StudentName (@form.StudentNumber)</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="label">Email:</span>
                                            <span class="value">@form.StudentEmail</span>
                                        </div>
                                    </div>
                                </div>

                                @if (form.Items.Any())
                                {
                                    <div class="items-section">
                                        <strong>Borrowed Items:</strong>
                                        @foreach (var dept in form.Items.GroupBy(i => i.Department))
                                        {
                                            <div class="department-group">
                                                <strong>@dept.Key:</strong>
                                                <ul>
                                                    @foreach (var item in dept)
                                                    {
                                                        <li>@item.ItemName √ó @item.Quantity</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                }

                                <div class="form-actions">
                                    <button class="btn-approve" @onclick="@(async () => await ApproveForm(form.Id))">
                                        Approve
                                    </button>
                                    <button class="btn-disapprove" @onclick="@(async () => await DisapproveForm(form.Id))">
                                        Disapprove
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <p>üì≠ No pending forms.</p>
                    </div>
                }
            </section>
        }
        else if (activeTab == "history")
        {
            <section class="forms-section">
                @if (MyHistoryForms.Any())
                {
                    <div class="forms-list">
                        @foreach (var form in MyHistoryForms)
                        {
                            <div class="form-card history">
                                <div class="form-header">
                                    <div class="reference">
                                        <strong>Ref:</strong> <code>@form.ReferenceCode</code>
                                    </div>
                                    <div class="status-badge @(form.IsApproved == true ? "approved" : "disapproved")">
                                        @(form.IsApproved == true ? "‚úÖ Approved" : "‚ùå Disapproved")
                                    </div>
                                </div>

                                <div class="form-details">
                                    <div class="detail-row">
                                        <div class="detail-item">
                                            <span class="label">Student:</span>
                                            <span class="value">@form.StudentName (@form.StudentNumber)</span>
                                        </div>
                                    </div>
                                    <div class="detail-row">
                                        <div class="detail-item">
                                            <span class="label">Submitted:</span>
                                            <span class="value">@form.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="label">Processed:</span>
                                            <span class="value">@form.ProcessedAt?.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                    </div>
                                </div>

                                @if (form.Items.Any())
                                {
                                    <div class="items-section">
                                        <strong>Borrowed Items:</strong>
                                        @foreach (var dept in form.Items.GroupBy(i => i.Department))
                                        {
                                            <div class="department-group">
                                                <strong>@dept.Key:</strong>
                                                <ul>
                                                    @foreach (var item in dept)
                                                    {
                                                        <li>@item.ItemName √ó @item.Quantity</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <p>üì≠ No history yet.</p>
                    </div>
                }
            </section>
        }

        @if (!string.IsNullOrEmpty(actionMessage))
        {
            <div class="message @(actionMessage.Contains("Error") ? "error" : "success")">
                @actionMessage
            </div>
        }
    </main>
</div>

