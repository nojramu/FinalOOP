@code {
    private string displayedUsername = string.Empty;
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private string activeTab = "pending";
    private string actionMessage = string.Empty;
    private List<BorrowForm> MyPendingForms = new();
    private List<BorrowForm> MyHistoryForms = new();

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email) || UserSession.Role != "Professor")
        {
            Console.WriteLine("‚ö†Ô∏è ProfessorForms: No session or not a professor; redirecting to login (/).");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedUsername = UserSession.Username;
        displayedEmail = UserSession.Email;
        
        // Load all forms from database (not filtered by subject anymore)
        await LoadFormsAsync();
        
        Console.WriteLine($"‚úÖ ProfessorForms loaded. Logged in as: {displayedEmail}");
    }

    private async Task LoadFormsAsync()
    {
        try
        {
            // Load forms assigned to THIS professor
            var allForms = await Db.BorrowForms
                .Include(f => f.Items)
                .Where(f => f.ProfessorEmail == UserSession.Email)
                .OrderByDescending(f => f.SubmittedAt)
                .ToListAsync();

            MyPendingForms = allForms.Where(f => f.IsApproved == null).ToList();
            MyHistoryForms = allForms.Where(f => f.IsApproved.HasValue)
                .OrderByDescending(f => f.ProcessedAt ?? f.SubmittedAt)
                .ToList();
                
            Console.WriteLine($"‚úÖ Loaded {MyPendingForms.Count} pending forms and {MyHistoryForms.Count} history forms for {UserSession.Email}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading forms: {ex.Message}");
        }
    }

    private async Task ApproveForm(int formId)
    {
        try
        {
            var form = await Db.BorrowForms
                .Include(f => f.Items)
                .FirstOrDefaultAsync(f => f.Id == formId);
                
            if (form != null && form.ProfessorEmail == UserSession.Email)
            {
                // Approve the form (NOT issuing yet - admin will handle that)
                form.IsApproved = true;
                form.ProcessedAt = DateTime.Now;
                form.ProcessedBy = $"Professor: {UserSession.Email}";
                await Db.SaveChangesAsync();
                
                actionMessage = $"‚úÖ Form {form.ReferenceCode} approved! Waiting for admin to issue items.";
                Console.WriteLine($"‚úÖ Professor approved form {form.ReferenceCode}");
                await LoadFormsAsync(); // Reload forms
                StateHasChanged();

                await Task.Delay(2000);
                actionMessage = string.Empty;
                StateHasChanged();
            }
            else
            {
                actionMessage = "Error: Form not found or not assigned to you.";
            }
        }
        catch (Exception ex)
        {
            actionMessage = $"Error: {ex.Message}";
            Console.WriteLine($"‚ùå Error approving form: {ex.Message}");
        }
    }

    private async Task DisapproveForm(int formId)
    {
        try
