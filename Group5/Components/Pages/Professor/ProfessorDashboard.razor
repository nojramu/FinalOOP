    opacity: 0;
    transition: opacity 0.4s ease;
}

.profile-pic:hover {
    transform: scale(1.08);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
}

.profile-pic:hover::before {
    opacity: 1;
}

.logo-img {
    width: 100%;
    height: 100%;
