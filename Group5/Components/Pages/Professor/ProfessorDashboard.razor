@page "/professordashboard"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject Group5.Data.AppDbContext Db
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Hello, @displayedUsername!</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/professordashboard" class="nav-item active">Dashboard</a>
            <a href="/professorforms" class="nav-item">Pending Forms</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üìä</span> PROFESSOR DASHBOARD</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <!-- Notice Section -->
        <section class="notice">
            <h3>üì¢ Notice:</h3>
            <p>@UserDatabase.Notice</p>
        </section>

        <!-- Statistics Section -->
        <section class="stats-section">
            <h3>Overview</h3>
            <div class="stats-grid">
                <div class="stat-card pending">
                    <div class="stat-number">@MyPendingForms.Count</div>
                    <div class="stat-label">Pending Forms</div>
                </div>
                <div class="stat-card approved">
                    <div class="stat-number">@ApprovedForms.Count</div>
                    <div class="stat-label">Approved Forms</div>
                </div>
                <div class="stat-card disapproved">
                    <div class="stat-number">@DisapprovedForms.Count</div>
                    <div class="stat-label">Disapproved Forms</div>
                </div>
            </div>
        </section>

        <!-- Quick Actions Section -->
        <section class="quick-actions">
            <h3>Quick Actions</h3>
            <div class="actions-grid">
                <a href="/professorforms" class="action-card">
                    <div class="action-icon">üìù</div>
                    <div class="action-title">Review Forms</div>
                    <div class="action-description">Approve or disapprove student borrow requests</div>
                </a>
            </div>
        </section>

        <!-- Recent Forms Section -->
        @if (MyPendingForms.Any())
        {
            <section class="recent-section">
                <h3>Recent Pending Forms</h3>
                <div class="forms-list">
                    @foreach (var form in MyPendingForms.Take(5))
                    {
                        <div class="form-card">
                            <div class="form-header">
                                <span class="ref-code">Ref: @form.ReferenceCode</span>
                                <span class="form-date">@form.SubmittedAt.ToString("MM/dd HH:mm")</span>
                            </div>
                            <div class="form-body">
                                <div><strong>Student:</strong> @form.StudentName (@form.StudentNumber)</div>
                                <div><strong>Subject:</strong> @form.SubjectCode</div>
                            </div>
                        </div>
                    }
                </div>
                @if (MyPendingForms.Count > 5)
                {
                    <p class="view-all">
                        <a href="/professorforms">View all @MyPendingForms.Count pending forms ‚Üí</a>
                    </p>
                }
            </section>
        }
    </main>
</div>

<style>
/* === Layout === */
.layout {
    display: flex;
    min-height: 100vh;
    font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
    margin: 0;
    padding: 0;
    position: relative;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
}

/* === Sidebar === */
.sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: 280px;
    height: 100vh;
    background: linear-gradient(180deg, #9B1B30 0%, #6B0F1A 50%, #4A0000 100%);
    color: white;
    display: flex;
    flex-direction: column;
    padding: 0;
    box-shadow: 6px 0 32px rgba(0, 0, 0, 0.25);
