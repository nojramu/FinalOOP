    font-weight: bold;
    color: #a00000;
    font-size: 1.1rem;
}

.form-date {
    color: #666;
    font-size: 0.9rem;
}

.form-body {
    display: flex;
    flex-direction: column;
    gap: 8px;
    color: #333;
}

.view-all {
    text-align: center;
    margin-top: 20px;
}

.view-all a {
    color: #a00000;
    font-weight: bold;
    text-decoration: none;
    font-size: 1.1rem;
}

.view-all a:hover {
    text-decoration: underline;
}
</style>

@code {
    private string displayedUsername = string.Empty;
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private List<BorrowForm> MyPendingForms = new();
    private List<BorrowForm> ApprovedForms = new();
    private List<BorrowForm> DisapprovedForms = new();

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedUsername = UserSession.Username;
        displayedEmail = UserSession.Email;
        await LoadFormsAsync();
    }

    private async Task LoadFormsAsync()
    {
        try
        {
            var allForms = await Db.BorrowForms
                .Include(f => f.Items)
                .Where(f => f.ProfessorEmail == displayedEmail)
                .OrderByDescending(f => f.SubmittedAt)
                .ToListAsync();

            MyPendingForms = allForms.Where(f => f.IsApproved == null).ToList();
            ApprovedForms = allForms.Where(f => f.IsApproved == true).ToList();
            DisapprovedForms = allForms.Where(f => f.IsApproved == false).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading forms: {ex.Message}");
        }
    }

    private void LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;
            Navigation.NavigateTo("/", forceLoad: false);
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}

