    color: #6b7280;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* === Buttons === */
.btn-primary {
    padding: 14px 32px;
    background: linear-gradient(135deg, #9B1B30 0%, #C41E3A 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(155, 27, 48, 0.3);
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #C41E3A 0%, #8B0000 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(155, 27, 48, 0.4);
}

.btn-primary:active {
    transform: translateY(0);
}

/* === Message === */
.message {
    margin-top: 24px;
    padding: 18px 24px;
    border-radius: 12px;
    font-weight: 600;
    text-align: center;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    animation: slideIn 0.3s ease-out;
}

.message.success {
    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
    color: #064e3b;
    border: 2px solid #10b981;
}

.message.error {
    background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
    color: #7f1d1d;
    border: 2px solid #ef4444;
}

/* === Animations === */
@@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.stat-card {
    animation: fadeIn 0.5s ease-out;
}

.stat-card:nth-child(1) { animation-delay: 0.05s; }
.stat-card:nth-child(2) { animation-delay: 0.1s; }
.stat-card:nth-child(3) { animation-delay: 0.15s; }
.stat-card:nth-child(4) { animation-delay: 0.2s; }
.stat-card:nth-child(5) { animation-delay: 0.25s; }
.stat-card:nth-child(6) { animation-delay: 0.3s; }

/* === Responsive Design === */
@@media (max-width: 1024px) {
    .sidebar {
        width: 260px;
    }
    
    .main-content {
        margin-left: 260px;
        padding: 30px 40px;
    }
}

@@media (max-width: 768px) {
    .sidebar {
        width: 100%;
        height: auto;
        position: relative;
    }
    
    .main-content {
        margin-left: 0;
        padding: 20px;
    }
    
    .top-header {
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
}
</style>

@code {
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private string message = string.Empty;
    private string newNotice = UserDatabase.Notice;
    private int studentCount = 0;
    private int professorCount = 0;
    private int pendingCount = 0;
    private int approvedNotIssuedCount = 0;
    private int issuedCount = 0;
    private int returnedCount = 0;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedEmail = UserSession.Email;
        newNotice = UserDatabase.Notice ?? "No new notices.";
        
        // Load statistics from database
        await LoadStatisticsAsync();
    }

    private async Task LoadStatisticsAsync()
    {
        try
        {
            // Load user counts from database
            studentCount = await Db.Users.CountAsync(u => u.Role == "Student");
            professorCount = await Db.Users.CountAsync(u => u.Role == "Professor");
            
            // Load form counts from database
            pendingCount = await Db.BorrowForms.CountAsync(f => f.IsApproved == null);
            approvedNotIssuedCount = await Db.BorrowForms.CountAsync(f => f.IsApproved == true && !f.IsIssued);
            issuedCount = await Db.BorrowForms.CountAsync(f => f.IsIssued && !f.IsReturned);
            returnedCount = await Db.BorrowForms.CountAsync(f => f.IsReturned);
            
            Console.WriteLine($"ðŸ“Š Statistics loaded: {studentCount} students, {professorCount} professors");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"âŒ Error loading statistics: {ex.Message}");
        }
    }

    private void UpdateNotice()
    {
        if (string.IsNullOrWhiteSpace(newNotice))
        {
            message = "Error: Notice cannot be empty.";
            return;
        }
        UserDatabase.Notice = newNotice.Trim();
        message = "âœ… Notice announced successfully!";
        StateHasChanged();

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            message = string.Empty;
            InvokeAsync(StateHasChanged);
        });
    }

    private void LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;
            Navigation.NavigateTo("/", forceLoad: false);
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}

