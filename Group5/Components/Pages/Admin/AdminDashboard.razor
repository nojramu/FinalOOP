@page "/admindashboard"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject Group5.Data.AppDbContext Db
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Administrator</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/admindashboard" class="nav-item active">Overview</a>
            <a href="/adminforms" class="nav-item">All Forms</a>
            <a href="/adminstock" class="nav-item">Stock</a>
            <a href="/adminissue" class="nav-item">Issue Items</a>
            <a href="/adminreturns" class="nav-item">Returns</a>
            <a href="/viewdatabase" class="nav-item">View Users</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">ðŸ“Š</span> SYSTEM OVERVIEW</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <!-- Notice Management -->
        <section class="notice-section">
            <h3>System Announcements</h3>
            <div class="notice-card">
                <label>Notice:</label>
                <textarea @bind="newNotice" placeholder="Enter official notice (e.g., closure, policy change)..."></textarea>
                <button class="btn-primary" @onclick="UpdateNotice">Announce Notice</button>
            </div>
        </section>

        <!-- System Overview -->
        <section class="overview-section">
            <h3>System Statistics</h3>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">@studentCount</div>
                    <div class="stat-label">Students</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">@professorCount</div>
                    <div class="stat-label">Professors</div>
                </div>
                <div class="stat-card pending">
                    <div class="stat-number">@pendingCount</div>
                    <div class="stat-label">Pending Forms</div>
                </div>
                <div class="stat-card warning">
                    <div class="stat-number">@approvedNotIssuedCount</div>
                    <div class="stat-label">Approved (Not Issued)</div>
                </div>
                <div class="stat-card success">
                    <div class="stat-number">@issuedCount</div>
                    <div class="stat-label">Issued (Borrowed)</div>
                </div>
                <div class="stat-card returned">
                    <div class="stat-number">@returnedCount</div>
                    <div class="stat-label">Returned</div>
                </div>
            </div>
        </section>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message @(message.Contains("Error") ? "error" : "success")">
                @message
            </div>
        }
    </main>
</div>

<style>
/* === Layout === */
.layout {
    display: flex;
    min-height: 100vh;
    font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
    margin: 0;
    padding: 0;
    position: relative;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
}

/* === Sidebar === */
