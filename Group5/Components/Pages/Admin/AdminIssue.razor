@page "/adminissue"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@using System
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Administrator</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/admindashboard" class="nav-item">Overview</a>
            <a href="/adminforms" class="nav-item">All Forms</a>
            <a href="/adminstock" class="nav-item">Stock</a>
            <a href="/adminissue" class="nav-item active">Issue Items</a>
            <a href="/adminreturns" class="nav-item">Returns</a>
            <a href="/viewdatabase" class="nav-item">View Users</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üì§</span> ISSUE APPROVED ITEMS</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <section class="issue-section">
            <div class="section-header">
                <h3>Approved Forms Ready to Issue</h3>
                <p>Mark approved forms as <strong>Issued</strong> when items are handed to the student.</p>
            </div>

            @if (ApprovedNotIssued.Any())
            {
                <div class="forms-count">
                    <p>There are <strong>@ApprovedNotIssued.Count</strong> form(s) ready to be issued.</p>
                </div>
                <div class="forms-list">
                    @foreach (var form in ApprovedNotIssued)
                    {
                        <div class="form-card">
                            <div class="form-header">
                                <div class="form-ref">
                                    <strong>Ref:</strong> <code>@form.ReferenceCode</code>
                                </div>
                                <span class="badge approved">‚úÖ Approved</span>
                            </div>
                            <div class="form-body">
                                <div class="form-row">
                                    <div class="form-field">
                                        <span class="label">Student:</span>
                                        <span class="value">@form.StudentName</span>
                                    </div>
                                    <div class="form-field">
                                        <span class="label">Student Number:</span>
                                        <span class="value">@form.StudentNumber</span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-field">
                                        <span class="label">Email:</span>
                                        <span class="value">@form.StudentEmail</span>
                                    </div>
                                    <div class="form-field">
                                        <span class="label">Approved:</span>
                                        <span class="value">@form.ProcessedAt?.ToString("yyyy-MM-dd HH:mm")</span>
                                    </div>
                                </div>
                                @if (form.Items?.Any() == true)
                                {
                                    <div class="items-section">
                                        <strong>Items to Issue:</strong>
                                        @foreach (var dept in form.Items.GroupBy(i => i.Department))
                                        {
                                            <div class="dept-group">
                                                <strong class="dept-name">@dept.Key:</strong>
                                                <ul class="items-list">
                                                    @foreach (var item in dept)
                                                    {
                                                        <li>@item.ItemName √ó @item.Quantity</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                }
                                <div class="form-actions">
                                    <button class="btn-issue" @onclick="@(async () => await MarkAsIssued(form.Id))">
                                        Issue Items
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">üì≠</div>
                    <p>No approved forms waiting to be issued.</p>
                    <p class="empty-subtitle">Forms will appear here once professors approve them.</p>
                </div>
            }
        </section>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message @(message.Contains("Error") ? "error" : "success")">
                @message
            </div>
        }
    </main>
</div>

