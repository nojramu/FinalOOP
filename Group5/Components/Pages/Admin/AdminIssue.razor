@code {
    [Inject] private Group5.Data.AppDbContext Db { get; set; } = null!;
    [Inject] private Group5.Services.Interfaces.IInventoryService InventoryService { get; set; } = null!;
    
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private string message = string.Empty;
    private List<BorrowForm> approvedForms = new();

    private List<BorrowForm> ApprovedNotIssued => approvedForms;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è AdminIssue: No session email found; redirecting to login.");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        // Check for Administrator role
        if (string.IsNullOrWhiteSpace(UserSession.Role) || 
            (!UserSession.Role.Equals("Administrator", StringComparison.OrdinalIgnoreCase) &&
             !UserSession.Role.Equals("Admin", StringComparison.OrdinalIgnoreCase)))
        {
            Console.WriteLine($"‚ö†Ô∏è AdminIssue: User role is '{UserSession.Role}', not Administrator; redirecting.");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedEmail = UserSession.Email;
        await LoadFormsAsync();
        Console.WriteLine($"‚úÖ AdminIssue loaded. Logged in as: {displayedEmail}");
    }

    private async Task LoadFormsAsync()
    {
        try
        {
            approvedForms = await Db.BorrowForms
                .Include(f => f.Items)
                .Where(f => f.IsApproved == true && !f.IsIssued && !f.IsReturned)
                .OrderByDescending(f => f.ProcessedAt)
                .ToListAsync();
            
            Console.WriteLine($"‚úÖ Loaded {approvedForms.Count} approved forms ready to issue");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading forms: {ex.Message}");
        }
    }

    private async Task MarkAsIssued(int formId)
    {
        try
        {
            var form = await Db.BorrowForms
                .Include(f => f.Items)
                .FirstOrDefaultAsync(f => f.Id == formId);
                
            if (form == null || form.IsApproved != true)
            {
                message = "Error: Only approved forms can be issued.";
                return;
            }

            // üî• CRITICAL: Update inventory when issuing items
            var inventoryResult = await InventoryService.IssueItemsAsync(form.Items);
            
            if (!inventoryResult.Success)
            {
                message = $"‚ùå Error updating inventory: {inventoryResult.Message}";
                StateHasChanged();
                return;
            }

            // Mark form as issued
            form.IsIssued = true;
            await Db.SaveChangesAsync();
            
            message = $"‚úÖ Form {form.ReferenceCode} marked as issued! Inventory updated.";
            Console.WriteLine($"‚úÖ Form {form.ReferenceCode} issued - inventory decreased");
            
            // Reload forms
            await LoadFormsAsync();
            StateHasChanged();

            await Task.Delay(3000);
            message = string.Empty;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            message = $"‚ùå Error: {ex.Message}";
            Console.WriteLine($"‚ùå Error marking as issued: {ex.Message}");
            StateHasChanged();
        }
    }

    private void LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;
            Navigation.NavigateTo("/", forceLoad: false);
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}

