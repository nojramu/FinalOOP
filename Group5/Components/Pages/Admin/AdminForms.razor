@code {
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private string filterStatus = string.Empty;
    private List<BorrowForm>? allForms = null;
    private string actionMessage = string.Empty;

    private List<BorrowForm> FilteredForms
    {
        get
        {
            if (allForms == null) return new List<BorrowForm>();
            
            // Only show forms that have been approved by professor (IsApproved == true)
            // Exclude pending forms (IsApproved == null) - those are still with professor
            return allForms
                .Where(f =>
                    f.IsApproved == true && // Only professor-approved forms
                    (string.IsNullOrEmpty(filterStatus) ||
                    (filterStatus == "approved" && f.IsApproved == true && !f.IsIssued) ||
                    (filterStatus == "issued" && f.IsIssued && !f.IsReturned) ||
                    (filterStatus == "disapproved" && f.IsApproved == false) ||
                    (filterStatus == "returned" && f.IsReturned))
                )
                .OrderByDescending(f => f.SubmittedAt)
                .ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è AdminForms: No session email found; redirecting to login (/).");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        // Case-insensitive role check for "Administrator" or "Admin"
        if (string.IsNullOrWhiteSpace(UserSession.Role) || 
            (!UserSession.Role.Equals("Administrator", StringComparison.OrdinalIgnoreCase) &&
             !UserSession.Role.Equals("Admin", StringComparison.OrdinalIgnoreCase)))
        {
            Console.WriteLine($"‚ö†Ô∏è AdminForms: User role is '{UserSession.Role}', not Administrator; redirecting to dashboard.");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedEmail = UserSession.Email;
        
        // Load forms from database
        await LoadFormsAsync();
        
        Console.WriteLine($"‚úÖ AdminForms loaded. Logged in as: {displayedEmail}");
        Console.WriteLine($"üìã Loaded {allForms?.Count ?? 0} forms from database");
    }

    private async Task LoadFormsAsync()
    {
        try
        {
            // Only load forms that have been approved by professor
            // Forms with IsApproved == null are still pending professor approval
            allForms = await Db.BorrowForms
                .Include(f => f.Items)
                .Where(f => f.IsApproved == true) // Only professor-approved forms
                .OrderByDescending(f => f.SubmittedAt)
                .ToListAsync();
                
            Console.WriteLine($"‚úÖ Loaded {allForms.Count} professor-approved forms (pending forms excluded)");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading forms: {ex.Message}");
            actionMessage = $"Error loading forms: {ex.Message}";
        }
    }

    private void ClearFilters()
    {
        filterStatus = string.Empty;
        StateHasChanged();
    }

    private string GetStatusClass(BorrowForm form)
    {
        if (form.IsReturned) return "returned";
        if (form.IsIssued) return "issued";
        if (form.IsApproved == true) return "approved";
        if (form.IsApproved == false) return "disapproved";
        return "pending";
    }

    private string GetStatusText(BorrowForm form)
    {
        if (form.IsReturned) return "üîÑ Returned";
        if (form.IsIssued) return "üì¶ Issued";
        if (form.IsApproved == true && !form.IsIssued) return "‚úÖ Approved by Professor (Awaiting Issue)";
        if (form.IsApproved == false) return "‚ùå Disapproved";
        return "üïí Awaiting Professor Approval";
    }

    private async Task ApproveForm(int formId)
    {
        try
        {
            var form = await Db.BorrowForms
                .Include(f => f.Items)
                .FirstOrDefaultAsync(f => f.Id == formId);
                
            if (form != null && form.IsApproved == true && !form.IsIssued)
            {
                // Form is already approved by professor, now admin issues the items
                // Update processed by to include admin
                form.ProcessedBy = $"{form.ProcessedBy} ‚Üí Admin: {UserSession.Email}";
                form.ProcessedAt = DateTime.Now;
                
                // ‚ú® AUTOMATICALLY MARK AS BORROWED (ISSUED) AND DECREASE INVENTORY
                var inventoryResult = await InventoryService.IssueItemsAsync(form.Items);
                
                if (!inventoryResult.Success)
                {
                    actionMessage = $"‚ùå Cannot approve: {inventoryResult.Message}";
                    Console.WriteLine($"‚ùå Inventory check failed for form {form.ReferenceCode}: {inventoryResult.Message}");
                    StateHasChanged();
                    return;
                }
                
                // Mark as issued (borrowed)
                form.IsIssued = true;
                await Db.SaveChangesAsync();
                
                actionMessage = $"‚úÖ Form {form.ReferenceCode} approved and items issued! Inventory updated.";
                Console.WriteLine($"‚úÖ Admin approved form {form.ReferenceCode} - Items automatically issued, inventory decreased");
                await LoadFormsAsync();
                StateHasChanged();

                await Task.Delay(3000);
                actionMessage = string.Empty;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            actionMessage = $"‚ùå Error: {ex.Message}";
            Console.WriteLine($"‚ùå Error approving form: {ex.Message}");
        }
    }

    private async Task RejectForm(int formId)
    {
        try
        {
            var form = await Db.BorrowForms.FirstOrDefaultAsync(f => f.Id == formId);
            if (form != null && form.IsApproved == true && !form.IsIssued)
            {
                // Reject a professor-approved form (admin override)
                form.IsApproved = false;
                form.ProcessedAt = DateTime.Now;
                form.ProcessedBy = $"{form.ProcessedBy} ‚Üí Admin Rejected: {UserSession.Email}";
                form.RejectionReason = "Rejected by administrator";
                await Db.SaveChangesAsync();
                
                actionMessage = $"‚ùå Form {form.ReferenceCode} rejected.";
                Console.WriteLine($"‚ùå Admin rejected form {form.ReferenceCode}");
                await LoadFormsAsync();
                StateHasChanged();

                await Task.Delay(3000);
                actionMessage = string.Empty;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            actionMessage = $"‚ùå Error: {ex.Message}";
            Console.WriteLine($"‚ùå Error rejecting form: {ex.Message}");
        }
    }

    private void LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;
            Navigation.NavigateTo("/", forceLoad: false);
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}

