@page "/adminforms"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject Group5.Data.AppDbContext Db
@inject Group5.Services.Interfaces.IInventoryService InventoryService
@using System
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Administrator</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/admindashboard" class="nav-item">Overview</a>
            <a href="/adminforms" class="nav-item active">All Forms</a>
            <a href="/adminstock" class="nav-item">Stock</a>
            <a href="/adminissue" class="nav-item">Issue Items</a>
            <a href="/adminreturns" class="nav-item">Returns</a>
            <a href="/viewdatabase" class="nav-item">View Users</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üìã</span> ALL BORROW FORMS</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <!-- Info Banner -->
        <div class="info-banner">
            <p><strong>üìã Workflow:</strong> Forms must be approved by the assigned professor first before they appear here. Only professor-approved forms are available for admin review.</p>
        </div>

        @if (!string.IsNullOrEmpty(actionMessage))
        {
            <div class="action-message @(actionMessage.Contains("‚úÖ") ? "success" : "error")">
                @actionMessage
            </div>
        }

        <!-- Filters -->
        <div class="filters-section">
            <h3>Filter Forms</h3>
            <div class="filters">
                <div class="filter-group">
                    <label>Status:</label>
                    <select @bind="filterStatus">
                        <option value="">All Status</option>
                        <option value="approved">‚úÖ Approved by Professor (Not Issued)</option>
                        <option value="issued">üì¶ Issued</option>
                        <option value="disapproved">‚ùå Disapproved</option>
                        <option value="returned">üîÑ Returned</option>
                    </select>
                </div>
                <button class="btn-secondary" @onclick="ClearFilters">Clear Filters</button>
            </div>
        </div>

        <!-- Forms List -->
        <section class="forms-section">
            @if (allForms == null)
            {
                <div class="loading-state">
                    <p>‚è≥ Loading forms...</p>
                </div>
            }
            else if (!FilteredForms.Any())
            {
                <div class="empty-state">
                    <p>üì≠ No forms found.</p>
                    @if (!string.IsNullOrEmpty(filterStatus))
                    {
                        <p>Try clearing the filter to see all forms.</p>
                    }
                </div>
            }
            else
            {
                <div class="forms-count">
                    <p>Showing <strong>@FilteredForms.Count</strong> form(s) out of <strong>@allForms.Count</strong> total</p>
                </div>
                <div class="forms-list">
                    @foreach (var form in FilteredForms)
                    {
                        <div class="form-card @GetStatusClass(form)">
                            <div class="form-header">
                                <div class="form-ref">
                                    <strong>Ref:</strong> <code>@form.ReferenceCode</code>
                                </div>
                                <span class="badge @GetStatusClass(form)">@GetStatusText(form)</span>
                            </div>
                            <div class="form-body">
                                <div class="form-row">
                                    <div class="form-field">
                                        <span class="label">Student:</span>
                                        <span class="value">@form.StudentName (@form.StudentEmail)</span>
                                    </div>
                                    <div class="form-field">
                                        <span class="label">Student Number:</span>
                                        <span class="value">@form.StudentNumber</span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-field">
                                        <span class="label">Submitted:</span>
                                        <span class="value">@form.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</span>
                                    </div>
                                    @if (form.ProcessedAt.HasValue)
                                    {
                                        <div class="form-field">
                                            <span class="label">Processed:</span>
                                            <span class="value">@form.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                    }
                                </div>
                                @if (form.Items.Any())
                                {
                                    <div class="items-section">
                                        <strong>Items:</strong>
                                        @foreach (var dept in form.Items.GroupBy(i => i.Department))
                                        {
                                            <div class="dept-items">
                                                <em>@dept.Key:</em> @string.Join(", ", dept.Select(i => $"{i.ItemName}√ó{i.Quantity}"))
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                            @if (form.IsApproved == null)
                            {
                                <div class="form-actions">
                                    <button class="btn-approve-admin" @onclick="@(async () => await ApproveForm(form.Id))">
                                        ‚úÖ Approve
                                    </button>
                                    <button class="btn-reject-admin" @onclick="@(async () => await RejectForm(form.Id))">
                                        ‚ùå Reject
                                    </button>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </section>
    </main>
</div>

<style>
/* === Layout === */
.layout {
    display: flex;
    min-height: 100vh;
    font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
    margin: 0;
    padding: 0;
    position: relative;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
}

/* === Sidebar === */
.sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: 280px;
    height: 100vh;
    background: linear-gradient(180deg, #9B1B30 0%, #6B0F1A 50%, #4A0000 100%);
    color: white;
    display: flex;
    flex-direction: column;
    padding: 0;
    box-shadow: 6px 0 32px rgba(0, 0, 0, 0.25);
    overflow-y: auto;
    z-index: 100;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
}

.profile-section {
    text-align: center;
    padding: 40px 30px 32px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.05) 0%, transparent 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
}

.profile-section::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
    border-radius: 2px;
}

.profile-section h3 {
    margin: 0 0 20px 0;
    font-size: 1.1rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    opacity: 0.9;
    color: #ffffff;
}

.profile-pic {
    width: 120px;
    height: 120px;
    margin: 0 auto 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    padding: 15px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.profile-pic::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    padding: 2px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.1));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
}

.profile-pic:hover {
    transform: scale(1.08);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
}

.profile-pic:hover::before {
    opacity: 1;
}

.logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
}

.logout-btn {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
    color: #8B0000;
    border: none;
    border-radius: 10px;
    padding: 12px 24px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    letter-spacing: 0.5px;
    text-transform: uppercase;
    position: relative;
    overflow: hidden;
}

.logout-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(139, 0, 0, 0.1);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.logout-btn:hover::before {
    width: 300px;
    height: 300px;
}

.logout-btn:hover {
    background: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.3);
}

.logout-btn:active {
    transform: translateY(0);
}

.nav-menu {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 24px 20px;
}

.nav-item {
    display: flex;
    align-items: center;
    background: transparent;
    color: rgba(255, 255, 255, 0.8);
    padding: 16px 20px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-left: 3px solid transparent;
    position: relative;
    overflow: hidden;
}

.nav-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.4));
    transform: scaleY(0);
    transition: transform 0.3s ease;
}

.nav-item::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    width: 6px;
    height: 6px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    transform: translate(10px, -50%) scale(0);
    transition: transform 0.3s ease;
}

.nav-item:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.12);
    padding-left: 28px;
    box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.05);
}

.nav-item:hover::before {
    transform: scaleY(1);
}

.nav-item:hover::after {
    transform: translate(-12px, -50%) scale(1);
}

.nav-item.active {
    color: #ffffff;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
    padding-left: 28px;
    box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.2), 0 0 20px rgba(255, 255, 255, 0.1);
    border-left-color: #ffffff;
}

.nav-item.active::before {
    transform: scaleY(1);
}

.nav-item.active::after {
    transform: translate(-12px, -50%) scale(1);
    background: #ffffff;
}

.footer-links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    text-align: center;
    padding: 24px 30px 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.2) 0%, transparent 100%);
    position: relative;
}

.footer-links::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
    border-radius: 2px;
}

.footer-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 10px 20px;
    border-radius: 8px;
    letter-spacing: 0.5px;
}

.footer-links a:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}

/* === Main Content === */
.main-content {
    flex: 1;
    margin-left: 280px;
    padding: 40px 60px;
    overflow-y: auto;
    position: relative;
    min-height: 100vh;
}

.top-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    background: linear-gradient(135deg, #9B1B30 0%, #C41E3A 50%, #8B0000 100%);
    padding: 24px 32px;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(155, 27, 48, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.top-header h1 {
    font-size: 2rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 14px;
    margin: 0;
    color: #ffffff;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.top-header .icon {
    font-size: 2rem;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.4));
}

.email {
    color: #ffffff;
    font-weight: 600;
    font-size: 0.95rem;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    letter-spacing: 0.01em;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.divider {
    display: none;
}

/* === Filters Section === */
.filters-section {
    margin-bottom: 32px;
}

.filters-section h3 {
    margin: 0 0 20px 0;
    font-size: 1.5rem;
    color: #1a1a2e;
    font-weight: 700;
    letter-spacing: -0.02em;
}

.filters {
    display: flex;
    gap: 20px;
    align-items: flex-end;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    padding: 28px;
    border-radius: 16px;
    border: 2px solid #e9ecef;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
}

.filter-group {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.filter-group label {
    font-weight: 700;
    font-size: 0.95rem;
    color: #1a1a2e;
}

.filter-group select {
    padding: 12px 16px;
    border: 2px solid #e9ecef;
    border-radius: 10px;
    font-size: 1rem;
    background: white;
    min-width: 220px;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
}

.filter-group select:focus {
    outline: none;
    border-color: #9B1B30;
    box-shadow: 0 0 0 3px rgba(155, 27, 48, 0.1);
}

.btn-secondary {
    padding: 12px 24px;
    background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(107, 114, 128, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-secondary:hover {
    background: linear-gradient(135deg, #4b5563 0%, #374151 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(107, 114, 128, 0.4);
}

.btn-secondary:active {
    transform: translateY(0);
}

/* === Forms Section === */
.forms-count {
    margin-bottom: 24px;
    font-size: 1.1rem;
    color: #6b7280;
    font-weight: 600;
}

.forms-list {
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.form-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border: 2px solid #e9ecef;
    border-left-width: 6px;
    border-radius: 16px;
    padding: 28px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
}

.form-card:hover {
    transform: translateY(-4px) scale(1.01);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
}

.form-card.pending {
    border-left-color: #fbbf24;
}

.form-card.approved {
    border-left-color: #10b981;
}

.form-card.issued {
    border-left-color: #3b82f6;
}

.form-card.disapproved {
    border-left-color: #ef4444;
}

.form-card.returned {
    border-left-color: #6b7280;
}

.form-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    padding-bottom: 20px;
    border-bottom: 3px solid #f3f4f6;
}

.form-ref code {
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    padding: 8px 14px;
    border-radius: 8px;
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 1rem;
    font-weight: 700;
    color: #9B1B30;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.badge {
    padding: 10px 18px;
    border-radius: 24px;
    font-weight: 700;
    font-size: 0.9rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.badge.pending {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    color: #78350f;
}

.badge.approved {
    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
    color: #064e3b;
}

.badge.issued {
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    color: #1e40af;
}

.badge.disapproved {
    background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
    color: #7f1d1d;
}

.badge.returned {
    background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
    color: #1f2937;
}

.form-body {
    display: flex;
    flex-direction: column;
    gap: 18px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
}

.form-field {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.form-field .label {
    font-weight: 700;
    font-size: 0.9rem;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.form-field .value {
    font-size: 1rem;
    color: #1a1a2e;
    font-weight: 500;
}

.items-section {
    background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
    padding: 20px;
    border-radius: 12px;
    margin-top: 12px;
    border: 2px dashed #d1d5db;
}

.dept-items {
    margin: 10px 0;
    padding-left: 20px;
    font-weight: 500;
}

.empty-state, .loading-state {
    text-align: center;
    padding: 100px 40px;
    color: #9ca3af;
    font-size: 1.3rem;
    font-weight: 600;
}

.loading-state {
    animation: pulse 1.5s ease-in-out infinite;
}

@@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* === Action Message === */
.action-message {
    margin: 0 0 24px 0;
    padding: 18px 24px;
    border-radius: 12px;
    font-weight: 600;
    text-align: center;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    animation: slideDown 0.3s ease-out;
}

.action-message.success {
    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
    color: #064e3b;
    border: 2px solid #10b981;
}

.action-message.error {
    background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
    color: #7f1d1d;
    border: 2px solid #ef4444;
}

/* === Form Actions === */
.form-actions {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 3px solid #f3f4f6;
    display: flex;
    gap: 12px;
    justify-content: flex-end;
}

.btn-approve-admin {
    padding: 12px 28px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-approve-admin:hover {
    background: linear-gradient(135deg, #059669 0%, #047857 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
}

.btn-approve-admin:active {
    transform: translateY(0);
}

.btn-reject-admin {
    padding: 12px 28px;
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-reject-admin:hover {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
}

.btn-reject-admin:active {
    transform: translateY(0);
}

/* === Animations === */
@@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* === Animations === */
@@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.form-card {
    animation: fadeIn 0.5s ease-out;
}

