@code {
    [Inject] private Group5.Data.AppDbContext Db { get; set; } = null!;
    [Inject] private Group5.Services.Interfaces.IInventoryService InventoryService { get; set; } = null!;
    
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private string message = string.Empty;
    private List<BorrowForm> issuedForms = new();

    private List<BorrowForm> IssuedNotReturned => issuedForms;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è AdminReturns: No session email found; redirecting to login.");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        // Check for Administrator role
        if (string.IsNullOrWhiteSpace(UserSession.Role) || 
            (!UserSession.Role.Equals("Administrator", StringComparison.OrdinalIgnoreCase) &&
             !UserSession.Role.Equals("Admin", StringComparison.OrdinalIgnoreCase)))
        {
            Console.WriteLine($"‚ö†Ô∏è AdminReturns: User role is '{UserSession.Role}', not Administrator; redirecting.");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedEmail = UserSession.Email;
        await LoadFormsAsync();
        Console.WriteLine($"‚úÖ AdminReturns loaded. Logged in as: {displayedEmail}");
    }

    private async Task LoadFormsAsync()
    {
        try
        {
            issuedForms = await Db.BorrowForms
                .Include(f => f.Items)
                .Where(f => f.IsIssued && !f.IsReturned)
                .OrderByDescending(f => f.ProcessedAt)
                .ToListAsync();
            
            Console.WriteLine($"‚úÖ Loaded {issuedForms.Count} issued forms pending return");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading forms: {ex.Message}");
        }
    }

    private async Task MarkAsReturned(int formId)
    {
        try
        {
            var form = await Db.BorrowForms
                .Include(f => f.Items)
                .FirstOrDefaultAsync(f => f.Id == formId);
                
            if (form == null || !form.IsIssued)
            {
                message = "Error: Only issued forms can be marked as returned.";
                return;
            }

            // üî• CRITICAL: Restore inventory when items are returned
            var inventoryResult = await InventoryService.ReturnItemsAsync(form.Items);
            
            if (!inventoryResult.Success)
            {
                message = $"‚ùå Error updating inventory: {inventoryResult.Message}";
                StateHasChanged();
                return;
            }

            // Mark form as returned
            form.IsReturned = true;
            await Db.SaveChangesAsync();
            
            message = $"‚úÖ Form {form.ReferenceCode} marked as returned! Inventory restored.";
            Console.WriteLine($"‚úÖ Form {form.ReferenceCode} returned - inventory increased");
            
            // Reload forms
            await LoadFormsAsync();
            StateHasChanged();

            await Task.Delay(3000);
            message = string.Empty;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            message = $"‚ùå Error: {ex.Message}";
            Console.WriteLine($"‚ùå Error marking as returned: {ex.Message}");
            StateHasChanged();
        }
    }

    private void LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;
            Navigation.NavigateTo("/", forceLoad: false);
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}


