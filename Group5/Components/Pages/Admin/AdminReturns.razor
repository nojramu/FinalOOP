@page "/adminreturns"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@using System
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Administrator</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/admindashboard" class="nav-item">Overview</a>
            <a href="/adminforms" class="nav-item">All Forms</a>
            <a href="/adminstock" class="nav-item">Stock</a>
            <a href="/adminissue" class="nav-item">Issue Items</a>
            <a href="/adminreturns" class="nav-item active">Returns</a>
            <a href="/viewdatabase" class="nav-item">View Users</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üîÑ</span> PROCESS RETURNS</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <section class="returns-section">
            <div class="section-header">
                <h3>Issued Items Pending Return</h3>
                <p>Mark issued forms as <strong>Returned</strong> when items are returned by students.</p>
            </div>

            @if (IssuedNotReturned.Any())
            {
                <div class="forms-count">
                    <p>There are <strong>@IssuedNotReturned.Count</strong> form(s) with items currently borrowed.</p>
                </div>
                <div class="forms-list">
                    @foreach (var form in IssuedNotReturned)
                    {
                        <div class="form-card">
                            <div class="form-header">
                                <div class="form-ref">
                                    <strong>Ref:</strong> <code>@form.ReferenceCode</code>
                                </div>
                                <span class="badge issued">üì¶ Issued</span>
                            </div>
                            <div class="form-body">
                                <div class="form-row">
                                    <div class="form-field">
                                        <span class="label">Student:</span>
                                        <span class="value">@form.StudentName</span>
                                    </div>
                                    <div class="form-field">
                                        <span class="label">Student Number:</span>
                                        <span class="value">@form.StudentNumber</span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-field">
                                        <span class="label">Email:</span>
                                        <span class="value">@form.StudentEmail</span>
                                    </div>
                                    <div class="form-field">
                                        <span class="label">Issued:</span>
                                        <span class="value">@form.ProcessedAt?.ToString("yyyy-MM-dd HH:mm")</span>
                                    </div>
                                </div>
                                @if (form.Items?.Any() == true)
                                {
                                    <div class="items-section">
                                        <strong>Borrowed Items:</strong>
                                        @foreach (var dept in form.Items.GroupBy(i => i.Department))
                                        {
                                            <div class="dept-group">
                                                <strong class="dept-name">@dept.Key:</strong>
                                                <ul class="items-list">
                                                    @foreach (var item in dept)
                                                    {
                                                        <li>@item.ItemName √ó @item.Quantity</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                }
                                <div class="form-actions">
                                    <button class="btn-return" @onclick="@(async () => await MarkAsReturned(form.Id))">
                                        Mark as Returned
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">‚úÖ</div>
                    <p>No issued items awaiting return.</p>
                    <p class="empty-subtitle">All items have been returned!</p>
                </div>
            }
        </section>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message @(message.Contains("Error") ? "error" : "success")">
                @message
            </div>
        }
    </main>
</div>

