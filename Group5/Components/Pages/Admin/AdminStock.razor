@page "/adminstock"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject Group5.Data.AppDbContext Db
@inject Group5.Services.Interfaces.IInventoryService InventoryService
@using System
@using System.Linq
@using Group5.Shared
@using Group5.Models
@using Group5.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Administrator</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/admindashboard" class="nav-item">Overview</a>
            <a href="/adminforms" class="nav-item">All Forms</a>
            <a href="/adminstock" class="nav-item active">Stock</a>
            <a href="/adminissue" class="nav-item">Issue Items</a>
            <a href="/adminreturns" class="nav-item">Returns</a>
            <a href="/viewdatabase" class="nav-item">View Users</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üì¶</span> STOCK MANAGEMENT</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <section class="stock-section">
            <div class="section-header">
                <h3>Manage Stock Quantities</h3>
                <p>Edit quantities and click <strong>Save All Changes</strong> to update. Changes are saved to the database and reflect in real-time across all pages.</p>
            </div>

            @if (inventoryItems == null)
            {
                <div class="loading-state">
                    <p>‚è≥ Loading inventory...</p>
                </div>
            }
            else
            {
                @foreach (var departmentGroup in inventoryItems.GroupBy(i => i.Department).OrderBy(g => g.Key))
                {
                    <div class="stock-group">
                        <h4>@departmentGroup.Key</h4>
                        <div class="stock-items">
                            @foreach (var item in departmentGroup.OrderBy(i => i.ItemName))
                            {
                                var itemKey = $"{item.Department}|{item.ItemName}";
                                var currentQty = tempStock.TryGetValue(itemKey, out int qty) ? qty : item.TotalQuantity;
                                <div class="stock-item">
                                    <label>@item.ItemName</label>
                                    <div class="stock-input-group">
                                        <input type="number" 
                                               min="0" 
                                               value="@currentQty"
                                               @onchange="@((ChangeEventArgs e) => UpdateTempStock(itemKey, e.Value?.ToString()))"
                                               @oninput="@((ChangeEventArgs e) => UpdateTempStock(itemKey, e.Value?.ToString()))"
                                               class="stock-input" />
                                        <div class="stock-info">
                                            <span class="available-badge">Available: @item.AvailableQuantity</span>
                                            <span class="max-badge">Max/Student: @item.MaxPerStudent</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="action-bar">
                    <button class="btn-primary" @onclick="SaveStockChanges" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save All Changes</span>
                        }
                    </button>
                </div>
            }
        </section>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="message @(message.Contains("Error") ? "error" : "success")">
                @message
            </div>
        }
    </main>
</div>

