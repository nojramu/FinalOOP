@code {
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private string message = string.Empty;
    private Dictionary<string, int> tempStock = new();
    private List<InventoryItem>? inventoryItems = null;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è AdminStock: No session email found; redirecting to login.");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        // Check for Administrator role
        if (string.IsNullOrWhiteSpace(UserSession.Role) || 
            (!UserSession.Role.Equals("Administrator", StringComparison.OrdinalIgnoreCase) &&
             !UserSession.Role.Equals("Admin", StringComparison.OrdinalIgnoreCase)))
        {
            Console.WriteLine($"‚ö†Ô∏è AdminStock: User role is '{UserSession.Role}', not Administrator; redirecting.");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedEmail = UserSession.Email;
        await LoadInventoryAsync();
        Console.WriteLine($"‚úÖ AdminStock loaded. Logged in as: {displayedEmail}");
    }

    private async Task LoadInventoryAsync()
    {
        try
        {
            // Load all inventory items from database (same as student borrow pages)
            inventoryItems = await Db.InventoryItems
                .Where(i => i.IsActive)
                .OrderBy(i => i.Department)
                .ThenBy(i => i.ItemName)
                .ToListAsync();
            
            // Initialize tempStock with current database values
            tempStock = inventoryItems.ToDictionary(
                i => $"{i.Department}|{i.ItemName}",
                i => i.TotalQuantity
            );
            
            Console.WriteLine($"‚úÖ Loaded {inventoryItems.Count} inventory items from database");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading inventory: {ex.Message}");
            message = $"Error loading inventory: {ex.Message}";
        }
    }

    private void UpdateTempStock(string itemKey, string? value)
    {
        if (int.TryParse(value, out int qty) && qty >= 0)
        {
            tempStock[itemKey] = qty;
            StateHasChanged(); // Update UI immediately
        }
    }

    private async Task SaveStockChanges()
    {
        if (inventoryItems == null) return;
        
        isSaving = true;
        StateHasChanged();
        
        try
        {
            foreach (var kvp in tempStock)
            {
                var parts = kvp.Key.Split('|');
                if (parts.Length == 2)
                {
                    var department = parts[0];
                    var itemName = parts[1];
                    
                    var item = inventoryItems.FirstOrDefault(i => 
                        i.Department == department && i.ItemName == itemName);
                    
                    if (item != null)
                    {
                        var oldTotal = item.TotalQuantity;
                        var oldAvailable = item.AvailableQuantity;
                        var difference = kvp.Value - oldTotal;
                        
                        // Update total quantity
                        item.TotalQuantity = kvp.Value;
                        
                        // Update available quantity (maintain the difference)
                        item.AvailableQuantity = Math.Max(0, oldAvailable + difference);
                        
                        // Ensure available doesn't exceed total
                        if (item.AvailableQuantity > item.TotalQuantity)
                        {
                            item.AvailableQuantity = item.TotalQuantity;
                        }
                        
                        item.LastUpdated = DateTime.Now;
                    }
                }
            }
            
            await Db.SaveChangesAsync();
            message = "‚úÖ Stock quantities updated successfully! Database updated in real-time.";
            Console.WriteLine($"‚úÖ Stock quantities saved to database");
            
            // Reload to get fresh data
            await LoadInventoryAsync();
            StateHasChanged();

            await Task.Delay(3000);
            message = string.Empty;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            message = $"‚ùå Error: {ex.Message}";
            Console.WriteLine($"‚ùå Error saving stock: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;
            Navigation.NavigateTo("/", forceLoad: false);
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}


