            <a href="/admindashboard" class="nav-item">Overview</a>
            <a href="/adminforms" class="nav-item">All Forms</a>
            <a href="/adminstock" class="nav-item">Stock</a>
            <a href="/adminissue" class="nav-item">Issue Items</a>
            <a href="/adminreturns" class="nav-item">Returns</a>
