                                <th>Email Verified</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in students)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Username</td>
                                    <td>@user.Email</td>
                                    <td>@user.Name</td>
                                    <td>@user.StudentNumber</td>
                                    <td>@(user.IsEmailVerified ? "‚úì Yes" : "‚úó No")</td>
