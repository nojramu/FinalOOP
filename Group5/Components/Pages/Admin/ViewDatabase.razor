@code {
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private List<Group5.Models.User>? students;
    private List<Group5.Models.User>? professors;
    private List<Group5.Models.User>? administrators;
    private bool isDeleting = false;
    private bool isResettingIds = false;
    private int? deletingUserId = null;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        // Add a delay to allow session to be established
        await Task.Delay(200);

        // Check if user is logged in and is Administrator
        Console.WriteLine($"üîç ViewDatabase - Checking session: Email='{UserSession.Email}', Role='{UserSession.Role}'");
        Console.WriteLine($"üîç ViewDatabase - IsLoggedIn: {UserSession.IsLoggedIn}");

        if (string.IsNullOrWhiteSpace(UserSession.Email) || UserSession.Role != "Administrator")
        {
            Console.WriteLine($"‚ö†Ô∏è ViewDatabase - Session check failed. Email: '{UserSession.Email}', Role: '{UserSession.Role}'");
            errorMessage = "Access Denied. Only Administrators can view this page. Please log in again.";
            StateHasChanged();
            await Task.Delay(2000);
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedEmail = UserSession.Email;
        Console.WriteLine($"‚úÖ ViewDatabase - Access granted for {UserSession.Email} ({UserSession.Role})");

        // Reset any stuck states
        isDeleting = false;
        isResettingIds = false;
        deletingUserId = null;
        await LoadData();
    }

    private async Task LoadData()
    {
        var allUsers = await Db.Users.ToListAsync();
        students = allUsers.Where(u => u.Role == "Student").OrderBy(u => u.Username).ToList();
        professors = allUsers.Where(u => u.Role == "Professor").OrderBy(u => u.Username).ToList();
        administrators = allUsers.Where(u => u.Role == "Administrator").OrderBy(u => u.Username).ToList();
        StateHasChanged();
    }

    private async Task RefreshData()
    {
        successMessage = string.Empty;
        errorMessage = string.Empty;
        await LoadData();
        successMessage = "‚úÖ Data refreshed successfully!";
        StateHasChanged();

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            successMessage = string.Empty;
            InvokeAsync(StateHasChanged);
        });
    }

    private async Task DeleteUser(int userId)
    {
        if (isDeleting) return;

        isDeleting = true;
        deletingUserId = userId;
        successMessage = string.Empty;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var user = await Db.Users.FindAsync(userId);
            if (user != null)
            {
                Db.Users.Remove(user);
                await Db.SaveChangesAsync();
                successMessage = $"‚úÖ User '{user.Username}' (ID: {userId}) has been deleted successfully.";

                // Reload data
                await LoadData();
            }
            else
            {
                errorMessage = $"‚ùå User with ID {userId} not found.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"‚ùå Error deleting user: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
            deletingUserId = null;
            StateHasChanged();

            if (!string.IsNullOrEmpty(successMessage))
            {
                _ = Task.Delay(3000).ContinueWith(_ =>
                {
                    successMessage = string.Empty;
                    InvokeAsync(StateHasChanged);
                });
            }
        }
    }

    private async Task ResetUserIdsByRole()
    {
        if (isResettingIds) return;

        isResettingIds = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var connection = Db.Database.GetDbConnection();
            await connection.OpenAsync();

            using var transaction = await connection.BeginTransactionAsync();

            try
            {
                var roles = new[] { "Student", "Professor", "Administrator" };
                int totalReset = 0;

                foreach (var role in roles)
                {
                    var usersInRole = await Db.Users
                        .Where(u => u.Role == role)
                        .OrderBy(u => u.Id)
                        .ToListAsync();

                    if (usersInRole.Any())
                    {
                        var idMapping = new Dictionary<int, int>();
                        int newId = 1;

                        foreach (var user in usersInRole)
                        {
                            idMapping[user.Id] = newId;
                            newId++;
                        }

                        foreach (var mapping in idMapping)
                        {
                            var oldId = mapping.Key;
                            var newIdValue = mapping.Value;

                            var updateCmd = connection.CreateCommand();
                            updateCmd.Transaction = transaction;
                            updateCmd.CommandText = $"UPDATE Users SET Id = -{newIdValue} WHERE Id = {oldId} AND Role = '{role}'";
                            await updateCmd.ExecuteNonQueryAsync();
                        }

                        foreach (var mapping in idMapping)
                        {
                            var newIdValue = mapping.Value;

                            var updateCmd = connection.CreateCommand();
                            updateCmd.Transaction = transaction;
                            updateCmd.CommandText = $"UPDATE Users SET Id = {newIdValue} WHERE Id = -{newIdValue} AND Role = '{role}'";
                            await updateCmd.ExecuteNonQueryAsync();
                        }

                        totalReset += usersInRole.Count;
                    }
                }

                var allUsers = await Db.Users.ToListAsync();
                var maxId = allUsers.Any() ? allUsers.Max(u => u.Id) : 0;

                var sequenceCmd = connection.CreateCommand();
                sequenceCmd.Transaction = transaction;
                sequenceCmd.CommandText = "DELETE FROM sqlite_sequence WHERE name = 'Users'";
                await sequenceCmd.ExecuteNonQueryAsync();

                if (maxId > 0)
                {
                    var insertSeqCmd = connection.CreateCommand();
                    insertSeqCmd.Transaction = transaction;
                    insertSeqCmd.CommandText = $"INSERT INTO sqlite_sequence (name, seq) VALUES ('Users', {maxId})";
                    await insertSeqCmd.ExecuteNonQueryAsync();
                }

                await transaction.CommitAsync();

                successMessage = $"‚úÖ Successfully reset IDs per role. Students, Professors, and Administrators now each start from ID 1.";
                await LoadData();
            }
            catch
            {
                await transaction.RollbackAsync();
                throw;
            }
            finally
            {
                await connection.CloseAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"‚ùå Error resetting IDs: {ex.Message}";
        }
        finally
        {
            isResettingIds = false;
            StateHasChanged();

            if (!string.IsNullOrEmpty(successMessage))
            {
                _ = Task.Delay(3000).ContinueWith(_ =>
                {
                    successMessage = string.Empty;
                    InvokeAsync(StateHasChanged);
                });
            }
        }
    }

    private void LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;
            Navigation.NavigateTo("/", forceLoad: false);
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
