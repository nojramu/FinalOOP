            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="message success">
                @successMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="message error">
                @errorMessage
            </div>
        }

