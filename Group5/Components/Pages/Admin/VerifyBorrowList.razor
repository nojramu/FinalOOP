@code {
    [Inject] private AppDbContext Db { get; set; } = null!;
    
    private string displayedUsername = string.Empty;
    private string displayedEmail = string.Empty;
    private bool isLoggingOut = false;
    private string logoutButtonText = "Log Out";
    private List<CartItem>? cartItems;
    private string studentName = string.Empty;
    private string studentNumber = string.Empty;
    private string selectedProfessorEmail = string.Empty;
    private List<User> allProfessors = new();
    private bool editing = false;
    private bool isSubmitting = false;
    private string message = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(UserSession.Email))
        {
            Console.WriteLine("‚ö†Ô∏è VerifyBorrowList: No session email found; redirecting to login (/).");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        displayedUsername = UserSession.Username;
        displayedEmail = UserSession.Email;

        // Load cart items for this user
        cartItems = await Db.CartItems
            .Where(item => item.UserEmail == UserSession.Email)
            .ToListAsync();

        // Get student information
        var user = await Db.Users.FirstOrDefaultAsync(u => u.Email == UserSession.Email);
        studentName = user?.Name ?? user?.Username ?? UserSession.Username;
        studentNumber = user?.StudentNumber ?? string.Empty;

        // Load all professors from database
        allProfessors = await Db.Users
            .Where(u => u.Role == "Professor")
            .OrderBy(u => u.Username)
            .ToListAsync();

        Console.WriteLine($"‚úÖ VerifyBorrowList loaded. Logged in as: {displayedUsername}");
        Console.WriteLine($"üìã Loaded {allProfessors.Count} professors");
    }

    private async Task DeleteCartItem(int id)
    {
        var item = await Db.CartItems.FindAsync(id);
        if (item != null && item.UserEmail == UserSession.Email)
        {
            Db.CartItems.Remove(item);
            await Db.SaveChangesAsync();
            cartItems = await Db.CartItems
                .Where(cartItem => cartItem.UserEmail == UserSession.Email)
                .ToListAsync();
            StateHasChanged();
        }
    }

    private void ToggleEdit()
    {
        editing = !editing;
        StateHasChanged();
    }

    private async Task SubmitBorrowRequest()
    {
        message = string.Empty;

        // Name and number are auto-filled from account, so they should always be present
        // But double-check for safety
        if (string.IsNullOrWhiteSpace(studentName) || string.IsNullOrWhiteSpace(studentNumber))
        {
            message = "Error: Student information is missing. Please try logging in again.";
            return;
        }

        if (string.IsNullOrWhiteSpace(selectedProfessorEmail))
        {
            message = "Error: Please select a professor to review your request.";
            return;
        }

        if (cartItems == null || !cartItems.Any())
        {
            message = "Error: Your cart is empty.";
            return;
        }

        try
        {
            isSubmitting = true;
            StateHasChanged();

            // Generate reference code
            string year = DateTime.Now.Year.ToString();
            string randomPart = GenerateRandomCode(5);
            string refCode = $"BRW-{year}-{randomPart}";

            // Create borrow form with selected professor
            var borrowForm = new BorrowForm
            {
                ReferenceCode = refCode,
                StudentName = studentName,
                StudentNumber = studentNumber,
                StudentEmail = UserSession.Email,
                ProfessorEmail = selectedProfessorEmail, // Selected professor will receive this
                SubjectCode = string.Empty, // No subject required
                SubmittedAt = DateTime.Now,
                IsApproved = null,
                ProcessedAt = null,
                ProcessedBy = string.Empty,
                RejectionReason = string.Empty,
                IsIssued = false,
                IsReturned = false
            };

            // Add the form first
            Db.BorrowForms.Add(borrowForm);
            
            // Now add items - EF Core will handle the relationship
            foreach (var cartItem in cartItems)
            {
                var borrowItem = new BorrowFormItem
                {
                    Department = cartItem.Department,
                    ItemName = cartItem.ItemName,
                    Quantity = cartItem.Quantity,
                    BorrowForm = borrowForm // Set the navigation property
                };
                borrowForm.Items.Add(borrowItem);
            }
            
            // Clear cart from database
            Db.CartItems.RemoveRange(cartItems);
            
            // Save everything
            await Db.SaveChangesAsync();

            Console.WriteLine($"‚úÖ Borrow form submitted! Reference: {refCode}");
            Console.WriteLine($"üìß Form assigned to professor: {selectedProfessorEmail}");
            Console.WriteLine($"üìã Form status: IsApproved={borrowForm.IsApproved}, IsIssued={borrowForm.IsIssued}");
            message = $"‚úÖ Form submitted successfully! Reference: {refCode}";

            // Wait a moment to show success message
            await Task.Delay(1500);

            // Navigate back to dashboard
            Navigation.NavigateTo("/studentdashboard", forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error submitting borrow request: {ex.Message}");
            if (ex.InnerException != null)
            {
                Console.WriteLine($"‚ùå Inner Exception: {ex.InnerException.Message}");
                message = $"Error: {ex.InnerException.Message}";
            }
            else
            {
            message = $"Error: {ex.Message}";
            }
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private string GenerateRandomCode(int length)
    {
        const string chars = "ABCDEFGHJKLMNPQRSTUVWXYZ23456789";
        var random = new Random();
        return new string(Enumerable.Repeat(chars, length)
            .Select(s => s[random.Next(s.Length)]).ToArray());
    }

    private async Task LogoutAsync()
    {
        isLoggingOut = true;
        logoutButtonText = "Logging out...";
        StateHasChanged();

        try
        {
            Console.WriteLine("üö™ VerifyBorrowList: LogoutAsync invoked (SERVER side). Clearing session...");

            UserSession.Email = string.Empty;
            UserSession.Username = string.Empty;
            UserSession.Role = string.Empty;

            try
            {
                await JS.InvokeVoidAsync("console.log", "üö™ VerifyBorrowList: Logout clicked (CLIENT side) - clearing session & redirecting to /");
            }
            catch
            {
                // ignore any JS error here
            }

            try
            {
                Navigation.NavigateTo("/", forceLoad: false);
            }
            catch (Exception navEx)
            {
                Console.WriteLine($"‚ö†Ô∏è Navigation.NavigateTo threw: {navEx.Message}");
            }

            try
            {
                await JS.InvokeVoidAsync("eval", "window.location.href = '/'");
            }
            catch (Exception jsEx)
            {
                Console.WriteLine($"‚ö†Ô∏è Hard redirect via JS failed: {jsEx.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå LogoutAsync error: {ex.Message}");
            try
            {
                await JS.InvokeVoidAsync("eval", "window.location.href = '/'");
            }
            catch { }
        }
        finally
        {
            isLoggingOut = false;
            logoutButtonText = "Log Out";
            StateHasChanged();
        }
    }
}

