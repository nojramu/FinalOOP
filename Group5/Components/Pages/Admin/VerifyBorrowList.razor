@page "/verifyborrowlist"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@using Group5.Shared
@using Group5.Data
@using Group5.Models
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<div class="layout">
    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="profile-section">
            <h3>Hello, @displayedUsername!</h3>
            <div class="profile-pic">
                <img src="/images/ENLOGO.png" alt="EN Logo" class="logo-img" />
            </div>
            <button class="logout-btn" @onclick="LogoutAsync" disabled="@isLoggingOut">@logoutButtonText</button>
        </div>

        <nav class="nav-menu">
            <a href="/studentdashboard" class="nav-item">Dashboard</a>
            <a href="/studentborrow" class="nav-item">Borrow</a>
            <a href="/cart" class="nav-item active">Cart</a>
            <a href="/studenthistory" class="nav-item">History</a>
        </nav>

        <div class="footer-links">
            <a href="/help">Need help?</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <header class="top-header">
            <h1><span class="icon">üìã</span> BORROW REQUEST FORM</h1>
            <span class="email">@displayedEmail</span>
        </header>

        <hr class="divider" />

        <div class="verify-section">
            <h2 class="verify-title">VERIFY BORROW LIST</h2>

            @if (cartItems == null)
            {
                <p><em>Loading...</em></p>
            }
            else if (!cartItems.Any())
            {
                <div class="empty-cart">
                    <p>Your cart is empty.</p>
                </div>
            }
            else
            {
                <!-- Cart Items Summary -->
                <div class="form-details">
                    <h3>üì¶ Items to Borrow</h3>
                    
                    <div class="cart-table-container">
                        <table class="cart-table">
                            <thead>
                                <tr>
                                    <th>Department</th>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in cartItems)
                                {
                                    <tr>
                                        <td>@item.Department</td>
                                        <td>@item.ItemName</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-end">
                                            @if (editing)
                                            {
                                                <button class="btn-delete" @onclick="() => DeleteCartItem(item.Id)">Delete</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="edit-button-container">
                        <button class="btn-edit" @onclick="ToggleEdit">@((editing ? "Done Editing" : "Edit Cart"))</button>
                    </div>
                </div>

                <!-- Form Details -->
                <div class="form-details">
                    <h3>üìù Borrower Information</h3>
                    
                    <div class="info-banner">
                        <span class="info-icon">‚ÑπÔ∏è</span>
                        <p>Your account information has been automatically filled below. Please verify before submitting.</p>
                    </div>

                    <div class="form-grid">
                    <div class="form-group">
                            <label>Student Name</label>
                            <input type="text" value="@studentName" readonly class="readonly-input" />
                            <span class="field-hint">Auto-filled from your account</span>
                    </div>

                    <div class="form-group">
                            <label>Student Number</label>
                            <input type="text" value="@studentNumber" readonly class="readonly-input" />
                            <span class="field-hint">Auto-filled from your account</span>
                        </div>
                    </div>

                    <div class="professor-selection">
                        <label>üë®‚Äçüè´ Select Professor for Approval</label>
                        <select @bind="selectedProfessorEmail" class="professor-dropdown">
                            <option value="">-- Choose a professor --</option>
                            @foreach (var prof in allProfessors)
                            {
                                <option value="@prof.Email">@prof.Name (@prof.Email)</option>
                            }
                        </select>
                        <span class="field-hint">Select the professor who will approve your request</span>
                    </div>

                    <div class="approval-info">
                        <div class="approval-icon">‚úÖ</div>
                        <div class="approval-text">
                            <h4>Next Step: Professor Approval</h4>
                            <p>The selected professor will review and approve your request. You'll be notified once it's processed.</p>
                        </div>
                    </div>
                </div>

                <div class="cart-actions">
                    <button class="btn-back" @onclick='() => Navigation.NavigateTo("/cart")'>
                        ‚Üê Back to Cart
                    </button>
                    <button class="btn-confirm" 
                            @onclick="SubmitBorrowRequest" 
                            disabled="@(isSubmitting || string.IsNullOrEmpty(selectedProfessorEmail))">
                        @(isSubmitting ? "‚è≥ SUBMITTING..." : "‚úÖ SUBMIT FOR APPROVAL")
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="message @(message.Contains("Error") ? "error" : "success")">
                        @message
                    </div>
                }
            }
        </div>
    </main>
</div>

