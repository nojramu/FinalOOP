@inherits LayoutComponentBase

<div class="dashboard-layout">
    <aside class="sidebar">
        <!-- Logo Section -->
        <div class="logo-container">
            <img src="images/logo.png" 
                 alt="Water Station Logo" 
                 class="logo-image" />
            <h1 class="system-name">Water Station Online Appointment</h1>
        </div>
        
        <h2 style="text-align: center;">Customer</h2>

        <nav>
            <a href="/customer/home" class="nav-link @(IsActive("/customer/home") ? "active" : "")">
                <i class="fas fa-home"></i> Home
            </a>
            <a href="/customer/place-order" class="nav-link @(IsActive("/customer/place-order") ? "active" : "")">
                <i class="fas fa-box"></i> Place Order
            </a>
            <a href="/customer/order-history" class="nav-link @(IsActive("/customer/order-history") ? "active" : "")">
                <i class="fas fa-history"></i> Order History
            </a>
            <a href="/customer/feedback" class="nav-link @(IsActive("/customer/feedback") ? "active" : "")">
                <i class="fas fa-star"></i> Feedback
            </a>
            <a href="/customer/about" class="nav-link @(IsActive("/customer/about") ? "active" : "")">
                <i class="fas fa-info-circle"></i> About Us
            </a>
        </nav>
        
        <!-- Account and Logout buttons positioned at bottom -->
        <div class="bottom-container">
            <a href="/customer/account" class="nav-link @(IsActive("/customer/account") ? "active" : "")">
                <i class="fas fa-user-circle"></i> Account
            </a>
            <a href="/login" class="nav-link logout-link">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </aside>

    <main class="main-content">
        <div class="background-overlay"></div>
        <div class="page-container">
            @Body
        </div>
    </main>
</div>

@code {
    private bool IsActive(string href)
    {
        var uri = NavigationManager.Uri.Replace(NavigationManager.BaseUri, "/");
        return uri.StartsWith(href, StringComparison.OrdinalIgnoreCase);
    }

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}
