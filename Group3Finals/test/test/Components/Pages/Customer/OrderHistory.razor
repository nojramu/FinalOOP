@page "/customer/order-history"
@layout Layout.CustomerLayout
@inject AppDbContext DbContext
@inject test.Services.CurrentUserContext CurrentUser

<PageTitle>Order History</PageTitle>

<style>
    .order-history-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
        color: #fff;
        width: 100%;
    }

    .order-history-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        width: 90%;
        max-width: 1400px;
        overflow: hidden;
    }

    .order-history-card .card-header {
        background: linear-gradient(135deg, #063970, #0056b3) !important;
        color: white;
        padding: 1rem 1.5rem;
        border: none;
    }

    .order-history-card .card-header h5 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .order-history-card .table {
        margin: 0;
        background: transparent;
    }

    .order-history-card .table thead th {
        background: #212529;
        color: white;
        border: none;
        padding: 0.75rem;
        font-weight: 600;
    }

    .order-history-card .table tbody td {
        padding: 0.75rem;
        border-color: rgba(0, 0, 0, 0.1);
        color: #333;
    }

    .order-history-card .table tbody tr:hover {
        background: rgba(0, 123, 255, 0.1);
    }

    .order-history-card .table-responsive {
        max-height: 70vh;
        overflow-y: auto;
    }

    @@media (max-width: 768px) {
        .order-history-container {
            padding: 1rem;
        }

        .order-history-card {
            width: 100%;
        }

        .order-history-card .table {
            font-size: 0.8rem;
        }

        .order-history-card .table thead th,
        .order-history-card .table tbody td {
            padding: 0.5rem;
        }
    }
</style>

<div class="order-history-container">
    <div class="order-history-card">
        <div class="card-header">
            <h5>My Orders</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Customer Name</th>
                            <th>Address</th>
                            <th>Option</th>
                            <th>Type</th>
                            <th>Quantity</th>
                            <th>Payment</th>
                            <th>Total</th>
                            <th>Payment Status</th>
                            <th>Delivery Status</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Time Delivered</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (orders.Any())
                        {
                            @foreach (var o in orders)
                            {
                                <tr>
                                    <td>@o.CustomerName</td>
                                    <td>@($"{o.HouseNo}, {o.Street}, {o.Barangay}, Navotas City")</td>
                                    <td>@(o.PurchaseGallon ? "Purchase" : o.RefillGallon ? "Refill" : "-")</td>
                                    <td>@o.Type</td>
                                    <td>@o.Quantity</td>
                                    <td>@o.PaymentMethod</td>
                                    <td>â‚±@o.TotalPrice</td>
                                    <td>@o.PaymentStatus</td>
                                    <td>@o.DeliveryStatus</td>
                                    <td>@o.Status</td>
                                    <td>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@(o.TimeDelivered.HasValue ? o.TimeDelivered.Value.ToString("yyyy-MM-dd HH:mm:ss") : "-")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="12" class="text-center text-muted">No orders yet</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Order> orders = new();

    protected override async Task OnInitializedAsync()
    {
        var username = CurrentUser.Username?.ToLower();
        orders = await DbContext.Orders
            .AsNoTracking()
            .Where(o => (o.Username ?? "").ToLower() == (username ?? ""))
            .OrderByDescending(o => o.CreatedAt)
            .ToListAsync();
    }
}