@page "/quiz-takers/{quizId:int}"
@using SmartQuiz.Services
@using SmartQuiz.Models
@inject NavigationManager Navigation
@inject QuizAttemptService QuizAttemptService
@inject QuizService QuizService
@inject UserSessionService UserSessionService
@inject SmartQuiz.Data.AppDbContext _context
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Quiz Takers - Quiz @QuizId</PageTitle>

<style>
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    background: #61c2a2;
    min-height: 100vh;
}

/* NAVBAR */
.navbar {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 15px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.2);
}

.nav-left {
    display: flex;
    align-items: center;
    gap: 15px;
}

.profile-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    overflow: hidden;
}

.profile-photo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 12px;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.nav-links {
    display: flex;
    gap: 20px;
    align-items: center;
}

.nav-links a {
    color: #2c3e50;
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 500;
}

.nav-links a:hover {
    background: rgba(97, 194, 162, 0.1);
}

.logout {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white !important;
}

.logout:hover {
    background: linear-gradient(135deg, #c0392b, #a02620);
}

/* MAIN CONTENT */
.quiz-takers-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
}

.page-header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.2);
}

.page-header h2 {
    color: #2c3e50;
    margin: 0 0 10px 0;
    font-size: 2rem;
}

.page-header p {
    color: #7f8c8d;
    margin: 0;
    font-size: 1.1rem;
}

.back-btn {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    margin-bottom: 20px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.back-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(97, 194, 162, 0.4);
}

.takers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.taker-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    transition: all 0.3s ease;
    cursor: pointer;
}

.taker-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.15);
}

.taker-name {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 10px;
}

.taker-info {
    color: #7f8c8d;
    font-size: 0.95rem;
    margin-bottom: 15px;
}

.taker-score {
    font-size: 1.5rem;
    font-weight: 700;
    color: #61c2a2;
    margin-bottom: 10px;
}

.view-results-btn {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    flex: 1;
    transition: all 0.3s ease;
}

.view-results-btn:hover {
    background: linear-gradient(135deg, #48a583, #3d8f6f);
    transform: translateY(-2px);
}

.delete-btn {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
    font-size: 0.9rem;
    flex: 1;
}

.delete-btn:hover {
    background: linear-gradient(135deg, #c0392b, #a93226);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
}

.empty-state {
    text-align: center;
    padding: 60px 20px;
    color: rgba(255,255,255,0.9);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
}

.empty-state h4 {
    margin-bottom: 10px;
    color: #2c3e50;
    font-size: 1.5rem;
    font-weight: 700;
}

.empty-state p {
    margin-bottom: 20px;
    color: #7f8c8d;
    font-size: 1.1rem;
}

.loading {
    text-align: center;
    padding: 60px 20px;
    color: rgba(255,255,255,0.9);
    font-size: 1.2rem;
}

.error {
    text-align: center;
    padding: 60px 20px;
    color: #e74c3c;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    font-size: 1.1rem;
}
</style>

<!-- NAVBAR -->
<div class="navbar">
    <div class="nav-left">
        @if (!string.IsNullOrWhiteSpace(currentUserPhoto))
        {
            <img src="@currentUserPhoto" alt="avatar" class="profile-photo" />
        }
        else
        {
            <div class="profile-icon">üë§</div>
        }
        <a href="/profile" style="color: #2c3e50; font-weight: 600; font-size: 1.1rem; text-decoration: none;">Teacher Profile</a>
    </div>

    <div class="nav-links">
        <a href="/teacherdashboard">Dashboard</a>
        <a href="/view-quizzes">View Quizzes</a>
        <a href="/leaderboard">View Leaderboard</a>
        <a href="/createquiz">Create A Quiz</a>
        <a href="/" class="logout">Log out</a>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="quiz-takers-container">
    <button class="back-btn" @onclick="GoBack">‚Üê Back to Quizzes</button>

    @if (loading)
    {
        <div class="loading">Loading quiz takers...</div>
    }
    else if (!string.IsNullOrEmpty(error))
    {
        <div class="error">@error</div>
    }
    else
    {
        <div class="page-header">
            <h2>Quiz Takers</h2>
            <p>@(quiz?.Title ?? $"Quiz #{QuizId}")</p>
        </div>

        @if (quizAttempts.Count == 0)
        {
            <div class="empty-state">
                <h4>No Students Have Taken This Quiz Yet</h4>
                <p>Once students submit their answers, they will appear here.</p>
            </div>
        }
        else
        {
            <div class="takers-grid">
                @foreach (var attempt in quizAttempts)
                {
                    <div class="taker-card" @onclick="() => ViewResults(attempt.Id)">
                        <div class="taker-name">@(attempt.StudentName ?? "Unknown Student")</div>
                        <div class="taker-info">Submitted: @FormatDate(attempt.SubmittedAt)</div>
                        <div class="taker-score">@FormatScore(attempt.Score)</div>
                        <div class="taker-info">@attempt.CorrectAnswers / @attempt.TotalQuestions correct</div>
                        <div style="display: flex; gap: 10px; margin-top: 10px;">
                            <button class="view-results-btn" @onclick:stopPropagation="true" @onclick="() => ViewResults(attempt.Id)">View Results</button>
                            <button class="delete-btn" @onclick:stopPropagation="true" @onclick="() => DeleteAttempt(attempt.Id)">Delete</button>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    [Parameter] public int QuizId { get; set; }

    private Quiz? quiz;
    private List<QuizAttempt> quizAttempts = new();
    private bool loading = true;
    private string? error;
    private string currentUserPhoto = string.Empty;

    protected override void OnInitialized()
    {
        try
        {
            var teacherId = UserSessionService.CurrentUserId ?? 0;
            if (teacherId > 0)
            {
                try
                {
                    var user = _context.Users.FirstOrDefault(u => u.Id == teacherId);
                    currentUserPhoto = user?.PhotoPath ?? string.Empty;
                }
                catch { }
            }
        }
        catch { }
        
        LoadQuizTakers();
    }

    private void LoadQuizTakers()
    {
        try
        {
            loading = true;
            quiz = QuizService.GetQuizById(QuizId); // Get quiz details for display
            if (quiz == null)
            {
                error = "Quiz not found.";
                return;
            }
            quizAttempts = QuizAttemptService.GetQuizAttempts(QuizId);
            Console.WriteLine($"Loaded {quizAttempts.Count} attempts for Quiz {QuizId}");
        }
        catch (Exception ex)
        {
            error = $"Error loading quiz takers: {ex.Message}";
            Console.WriteLine($"Error loading quiz takers: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
        finally
        {
            loading = false;
        }
    }

    private void ViewResults(int attemptId)
    {
        Navigation.NavigateTo($"/quiz-results/{attemptId}?quizId={QuizId}");
    }

    private async Task DeleteAttempt(int attemptId)
    {
        // Show confirmation dialog
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Are you sure you want to delete this quiz attempt? This action cannot be undone.");

        if (!confirmed)
        {
            return;
        }

        try
        {
            QuizAttemptService.DeleteQuizAttempt(attemptId, QuizId);
            
            // Reload the quiz attempts list
            LoadQuizTakers();
            await JSRuntime.InvokeVoidAsync("alert", "Quiz attempt deleted successfully.");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting quiz attempt: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error deleting quiz attempt: {ex.Message}");
        }
    }

    private string FormatScore(double score)
    {
        return $"{score:F1}%";
    }

    private string FormatDate(DateTime date)
    {
        return date.ToString("MMM dd, yyyy HH:mm");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/view-quizzes");
    }
}

