<!-- MAIN DASHBOARD -->
<div class="main-content">
    <div class="dashboard-header">
        <h1>Teacher Dashboard</h1>
        <p>Monitor your students' progress and quiz performance with real-time analytics</p>
    </div>

    <div class="dashboard-grid">
        <!-- AVERAGE SCORES -->
        <div class="card average-scores" @onclick="@(() => Navigation.NavigateTo("/view-quizzes"))">
            <div class="card-icon"></div>
            <h3>Average Scores</h3>
            <p style="color: #7f8c8d; margin: 0;">Track student performance across all quizzes with detailed analytics and insights.</p>
        </div>

        <!-- STUDENTS' LEADERBOARD -->
        <div class="card leaderboard" @onclick="@(() => Navigation.NavigateTo("/leaderboard"))">
            <div class="card-icon"></div>
            <h3>Students' Leaderboard</h3>
            <p style="color: #7f8c8d; margin: 0;">View top-performing students and encourage healthy competition in your classroom.</p>
        </div>

        <!-- QUIZ COMPLETION -->
        <div class="card completion" @onclick="@(() => Navigation.NavigateTo("/view-quizzes"))">
            <div class="card-icon"></div>
            <h3>Quiz Completion</h3>
            <p style="color: #7f8c8d; margin: 0;">Monitor completion rates and identify students who may need additional support.</p>
        </div>

        <!-- CALENDAR -->
        <div class="card big-card calendar-icon">
            <div class="card-icon"></div>
            <h3>Calendar</h3>
            <div class="calendar">
                <div class="calendar-header">
                    <button class="calendar-nav-btn" @onclick="PreviousMonth">‚Äπ</button>
                    <div class="calendar-month">@currentDate.ToString("MMMM yyyy")</div>
                    <button class="calendar-nav-btn" @onclick="NextMonth">‚Ä∫</button>
                </div>
                <div class="calendar-weekdays">
                    <div class="weekday">Sun</div>
                    <div class="weekday">Mon</div>
                    <div class="weekday">Tue</div>
                    <div class="weekday">Wed</div>
                    <div class="weekday">Thu</div>
                    <div class="weekday">Fri</div>
                    <div class="weekday">Sat</div>
                </div>
                <div class="calendar-days">
                    @foreach (var day in calendarDays)
                    {
                        var dayClass = "calendar-day";
                        if (day.IsOtherMonth) dayClass += " other-month";
                        if (day.IsToday) dayClass += " today";
                        if (day.Date.Date == selectedDate.Date) dayClass += " selected";

                        <div class="@dayClass" @onclick="@(() => SelectDate(day.Date))">
                            @day.DayNumber
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string currentUserPhoto = string.Empty;
    private DateTime currentDate = DateTime.Now;
    private DateTime selectedDate = DateTime.Now;
    private List<CalendarDay> calendarDays = new();

    protected override void OnInitialized()
    {
        try
        {
            var teacherId = UserSessionService.CurrentUserId ?? 0;
            if (teacherId > 0)
            {
                try
                {
                    var user = _context.Users.FirstOrDefault(u => u.Id == teacherId);
                    currentUserPhoto = user?.PhotoPath ?? string.Empty;
                }
                catch { }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading teacher photo: {ex.Message}");
        }
        
        BuildCalendar();
    }

    private void BuildCalendar()
    {
        calendarDays.Clear();
        
        var firstDayOfMonth = new DateTime(currentDate.Year, currentDate.Month, 1);
        var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);
        var startDate = firstDayOfMonth.AddDays(-(int)firstDayOfMonth.DayOfWeek);
        
        var today = DateTime.Today;
        var currentMonth = currentDate.Month;
        
        for (int i = 0; i < 42; i++) // 6 weeks * 7 days
        {
            var date = startDate.AddDays(i);
            calendarDays.Add(new CalendarDay
            {
                Date = date,
                DayNumber = date.Day,
                IsOtherMonth = date.Month != currentMonth,
                IsToday = date.Date == today.Date
            });
        }
    }

    private void PreviousMonth()
    {
        currentDate = currentDate.AddMonths(-1);
        BuildCalendar();
    }

    private void NextMonth()
    {
        currentDate = currentDate.AddMonths(1);
        BuildCalendar();
    }

    private void SelectDate(DateTime date)
    {
        selectedDate = date.Date;
        if (date.Month != currentDate.Month)
        {
            currentDate = new DateTime(date.Year, date.Month, 1);
            BuildCalendar();
        }
        else
        {
            StateHasChanged();
        }
    }

    private class CalendarDay
    {
        public DateTime Date { get; set; }
        public int DayNumber { get; set; }
        public bool IsOtherMonth { get; set; }
        public bool IsToday { get; set; }
    }
}


