<!-- MAIN DASHBOARD -->
<div class="main-content">
    <div class="dashboard-header">
        <h1>Dashboard</h1>
        <p>Monitor your quiz progress and performance.</p>
    </div>

    <div class="dashboard-grid">
        <!-- AVERAGE SCORES -->
        <div class="card average-scores" @onclick="@(() => Navigation.NavigateTo("/view-quiz-history"))">
            <div class="card-icon"></div>
            <h3>Average Scores</h3>
            @if (recentAttempts.Any())
            {
                <div class="line-chart-container">
                    <div class="line-chart-grid">
                        <div class="grid-line"></div>
                        <div class="grid-line"></div>
                        <div class="grid-line"></div>
                        <div class="grid-line"></div>
                    </div>
                    <!-- Dynamic line chart based on actual scores -->
                    <svg width="100%" height="100%" viewBox="0 0 100 100" preserveAspectRatio="none" style="position: absolute; top: 0; left: 0;">
                        @{
                            var points = GetLineChartPoints(recentAttempts);
                        }
                        <polyline points="@points" 
                                  fill="none" stroke="#3498db" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                        @for (int i = 0; i < recentAttempts.Count && i < 5; i++)
                        {
                            var x = 10 + (i * 15);
                            var score = recentAttempts[i].Score;
                            var y = 90 - (score * 0.6); // Scale score to chart height
                            <circle cx="@x" cy="@y" r="2" fill="#3498db"/>
                        }
                    </svg>
                    <div class="chart-axis">
                        @for (int i = 0; i < recentAttempts.Count && i < 5; i++)
                        {
                            <span>@(GetQuizTitle(recentAttempts[i].QuizId))</span>
                        }
                    </div>
                </div>
                <div style="text-align: center; margin-top: 10px; font-size: 0.9rem; color: #2c3e50; font-weight: 600;">
                    Average: @(averageScore.ToString("F1"))%
                </div>
            }
            else
            {
                <div class="empty-list">
                    <p>No quiz attempts yet. Take your first quiz to see your scores!</p>
                </div>
            }
        </div>

        <!-- QUIZ COMPLETION -->
        <div class="card completion" @onclick="@(() => Navigation.NavigateTo("/view-quiz-history"))">
            <div class="card-icon"></div>
            <h3>Quiz Completion</h3>
            @if (totalAvailableQuizzes > 0)
            {
                <div class="donut-chart-container">
                    @{
                        var completionDeg = completionPercentage * 3.6;
                    }
                    <div class="donut-chart" style="background: conic-gradient(
                        #3498db 0deg @(completionDeg.ToString("F1"))deg,
                        #e74c3c @(completionDeg.ToString("F1"))deg 360deg
                    );">
                        <div class="donut-inner">
                            <div class="donut-percentage">@(completionPercentage.ToString("F1"))%</div>
                            <div class="donut-label">Completed</div>
                        </div>
                    </div>
                </div>
                <div style="text-align: center; margin-top: 20px; font-size: 0.9rem; color: #7f8c8d;">
                    <span style="color: #3498db;">‚óè</span> Completed: @completedQuizzesCount<br>
                    <span style="color: #e74c3c;">‚óè</span> Available: @(totalAvailableQuizzes - completedQuizzesCount)
                </div>
            }
            else
            {
                <div class="empty-list">
                    <p>No quizzes available yet.</p>
                </div>
            }
        </div>

        <!-- QUIZ LIST -->
        <div class="card quiz-list" @onclick="@(() => Navigation.NavigateTo("/take-quiz"))">
            <div class="card-icon"></div>
            <h3>Available QuizBattles</h3>
            <div class="quiz-list-container">
                @if (availableQuizzes.Any())
                {
                    @foreach (var quiz in availableQuizzes.Take(5))
                    {
                        var hasTaken = QuizAttemptService.HasStudentTakenQuiz(quiz.Id, currentStudentId);
                        <div class="quiz-list-item" @onclick:stopPropagation="true" @onclick="@(() => Navigation.NavigateTo("/take-quiz"))">
                            <h5>@quiz.Title</h5>
                            <p>@(string.IsNullOrEmpty(quiz.Description) ? "No description" : quiz.Description)</p>
                            <span class="quiz-status @(hasTaken ? "completed" : "available")">@(hasTaken ? "Completed" : "Available")</span>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-list">
                        <p>No quizzes available at the moment.</p>
                    </div>
                }
            </div>
        </div>

        <!-- OVERALL QUIZ PERFORMANCE -->
        <div class="card big-card performance">
            <div class="card-icon"></div>
            <h3>Overall Quiz Performance</h3>
            @if (performanceData.Any())
            {
                <div class="bar-chart">
                    <div class="chart-legend">
                        <div class="legend-item">
                            <div class="legend-color legend-blue"></div>
                            <span>Correct Answers</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color legend-red"></div>
                            <span>Incorrect Answers</span>
                        </div>
                    </div>
                    
                    @foreach (var perf in performanceData.Take(5))
                    {
                        var maxValue = Math.Max(perf.Correct, perf.Incorrect);
                        var maxWidth = maxValue > 0 ? 100 : 0;
                        var correctWidth = maxValue > 0 ? (perf.Correct * 100.0 / maxValue) : 0;
                        var incorrectWidth = maxValue > 0 ? (perf.Incorrect * 100.0 / maxValue) : 0;
                        
                        <div class="bar-item">
                            <div class="bar-label">@perf.QuizTitle</div>
                            <div class="bar-container">
                                <div class="bar bar-correct" style="width: @(correctWidth)%;">@perf.Correct</div>
                                <div class="bar bar-incorrect" style="width: @(incorrectWidth)%;">@perf.Incorrect</div>
                            </div>
                        </div>
                    }
                    
                    @{
                        var maxBarValue = performanceData.Any() ? performanceData.Max(p => Math.Max(p.Correct, p.Incorrect)) : 10;
                        var scaleStep = maxBarValue > 0 ? Math.Ceiling(maxBarValue / 4.0) : 5;
                    }
                    <div class="bar-scale">
                        <span>0</span>
                        <span>@(scaleStep)</span>
                        <span>@(scaleStep * 2)</span>
                        <span>@(scaleStep * 3)</span>
                        <span>@(scaleStep * 4)</span>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-list">
                    <p>No quiz performance data yet. Complete some quizzes to see your performance!</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Quiz> availableQuizzes = new();
    private List<QuizAttempt> quizAttempts = new();
    private List<QuizAttempt> recentAttempts = new();
    private List<PerformanceData> performanceData = new();
    private int currentStudentId = 0;
    private double averageScore = 0;
    private int completedQuizzesCount = 0;
    private int totalAvailableQuizzes = 0;
    private double completionPercentage = 0;
    private string currentUserPhoto = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            currentStudentId = UserSessionService.CurrentUserId ?? 0;
            
            if (currentStudentId > 0)
            {
                // Load current user's photo if any
                try
                {
                    var user = await _context.Users.FindAsync(currentStudentId);
                    currentUserPhoto = user?.PhotoPath ?? string.Empty;
                }
                catch { }
                // Load available quizzes
                availableQuizzes = QuizService.GetAllPublishedQuizzesForStudents();
                totalAvailableQuizzes = availableQuizzes.Count;
                
                // Load student's quiz attempts
                quizAttempts = QuizAttemptService.GetStudentQuizAttempts(currentStudentId);
                
                // Get unique quiz IDs that the student has taken
                var takenQuizIds = quizAttempts.Select(a => a.QuizId).Distinct().ToList();
                completedQuizzesCount = takenQuizIds.Count;
                
                // Calculate completion percentage
                if (totalAvailableQuizzes > 0)
                {
                    completionPercentage = (completedQuizzesCount * 100.0) / totalAvailableQuizzes;
                }
                
                // Get recent attempts (last 5, ordered by most recent)
                recentAttempts = quizAttempts
                    .OrderByDescending(a => a.SubmittedAt)
                    .Take(5)
                    .ToList();
                
                // Calculate average score
                if (quizAttempts.Any())
                {
                    averageScore = quizAttempts.Average(a => a.Score);
                }
                
                // Build performance data for bar chart
                performanceData = new List<PerformanceData>();
                foreach (var attempt in quizAttempts.OrderByDescending(a => a.SubmittedAt).Take(5))
                {
                    var quiz = QuizService.GetQuizByIdForStudent(attempt.QuizId);
                    if (quiz != null)
                    {
                        performanceData.Add(new PerformanceData
                        {
                            QuizTitle = quiz.Title ?? "Unknown Quiz",
                            Correct = attempt.CorrectAnswers,
                            Incorrect = attempt.TotalQuestions - attempt.CorrectAnswers
                        });
                    }
                }
                
                Console.WriteLine($"Dashboard loaded: StudentId={currentStudentId}, {quizAttempts.Count} attempts, {availableQuizzes.Count} available quizzes, Average: {averageScore:F1}%");
                Console.WriteLine($"Available quizzes details:");
                foreach (var quiz in availableQuizzes)
                {
                    Console.WriteLine($"  - Quiz ID: {quiz.Id}, Title: {quiz.Title}, IsPublished: {quiz.IsPublished}, IsPrivate: {quiz.IsPrivate}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }

    private string GetLineChartPoints(List<QuizAttempt> attempts)
    {
        if (!attempts.Any()) return "";
        
        var points = new List<string>();
        var maxAttempts = Math.Min(attempts.Count, 5);
        
        for (int i = 0; i < maxAttempts; i++)
        {
            var x = 10 + (i * 15);
            var score = attempts[i].Score;
            var y = 90 - (score * 0.6); // Scale score (0-100) to chart height (0-90)
            // Use numeric values instead of percentages for SVG polyline
            points.Add($"{x},{y}");
        }
        
        return string.Join(" ", points);
    }

    private string GetQuizTitle(int quizId)
    {
        var quiz = QuizService.GetQuizByIdForStudent(quizId);
        if (quiz != null && !string.IsNullOrEmpty(quiz.Title))
        {
            // Truncate long titles
            return quiz.Title.Length > 10 ? quiz.Title.Substring(0, 10) + "..." : quiz.Title;
        }
        return $"Quiz {quizId}";
    }

    private class PerformanceData
    {
        public string QuizTitle { get; set; } = "";
        public int Correct { get; set; }
        public int Incorrect { get; set; }
    }
}

