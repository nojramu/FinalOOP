    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 15px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.2);
}

.nav-left {
    display: flex;
    align-items: center;
}

.profile-icon {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    margin-right: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
    overflow: hidden;
}

.profile-photo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 12px;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.nav-links a {
    margin-left: 30px;
    text-decoration: none;
    color: #333;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 20px;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
}

.nav-links a:hover {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.nav-links a.active {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    font-weight: 600;
}

.logout {
    color: #e74c3c !important;
    font-weight: 600;
}

.logout:hover {
    background: #e74c3c !important;
    color: white !important;
}

/* MAIN LAYOUT */
.main-content {
    padding: 50px 40px;
    min-height: calc(100vh - 90px);
    display: flex;
    flex-direction: column;
}

/* Dashboard Layout */
.dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    margin-top: 30px;
}

.card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    cursor: pointer;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(255,255,255,0.2);
    position: relative;
    overflow: hidden;
}

.card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #61c2a2, #48a583, #667eea);
    border-radius: 20px 20px 0 0;
}

.card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.card h3 {
    font-size: 1.3rem;
    margin-bottom: 15px;
    font-weight: 700;
    color: #2c3e50;
    display: flex;
    align-items: center;
    gap: 10px;
}

.card h3::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 2px;
}

/* Quiz List Styles */
.quiz-list-container {
    margin-top: 20px;
    max-height: 300px;
    overflow-y: auto;
}

.quiz-list-item {
    padding: 15px;
    margin-bottom: 10px;
    background: linear-gradient(135deg, rgba(97, 194, 162, 0.1), rgba(72, 165, 131, 0.1));
    border-radius: 12px;
    border-left: 4px solid #61c2a2;
    transition: all 0.3s ease;
    cursor: pointer;
}

.quiz-list-item:hover {
    background: linear-gradient(135deg, rgba(97, 194, 162, 0.2), rgba(72, 165, 131, 0.2));
    transform: translateX(5px);
    box-shadow: 0 4px 12px rgba(97, 194, 162, 0.2);
}

.quiz-list-item h5 {
    font-size: 1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 5px;
}

.quiz-list-item p {
    font-size: 0.85rem;
    color: #7f8c8d;
    margin: 0;
}

.quiz-list-item .quiz-status {
    display: inline-block;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-top: 8px;
}

.quiz-status.available {
    background: linear-gradient(135deg, #5cb85c, #449d44);
    color: white;
}

.quiz-status.completed {
    background: linear-gradient(135deg, #3498db, #2980b9);
    color: white;
}

.empty-list {
    text-align: center;
    padding: 40px 20px;
    color: #7f8c8d;
    font-style: italic;
}

/* Big Card - Overall Performance */
.big-card {
    grid-column: 1 / -1;
    min-height: 400px;
    background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.8));
    cursor: default;
    height: 100%;
}

.big-card:hover {
    transform: translateY(0) scale(1);
}

.big-card h3::before {
    background: linear-gradient(135deg, #667eea, #764ba2);
}

/* Chart Placeholders */
