@page "/forgotpassword"
@using SmartQuiz.Services
@using SmartQuiz.Models
@using Microsoft.EntityFrameworkCore
@inject NavigationManager Navigation
@inject SmartQuiz.Data.AppDbContext _context
@inject UserSessionService UserSessionService
@rendermode InteractiveServer

<style>
html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
}
.container {
    display: flex;
    height: 100vh;
    font-family: 'Poppins', sans-serif;
    background-color: #f9f9f9;
}

/* LEFT SIDE (green background) */
.left-panel {
    flex: 1;
    background-color: #61c2a2;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 24px;
    height: 100vh;
}

.logo {
    margin-left: 8px;
    cursor: pointer;
}

.logo img {
    width: 300px;
    height: auto;
}

.illustration {
    margin-top: 70px;
    display: flex;
    justify-content: center;
    width: 95%;
}

.illustration img {
    width: 100%;
    max-width: 800px;
    height: auto;
}

/* RIGHT SIDE (form) */
.right-panel {
    flex: 1;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    box-shadow: -5px 0 15px rgba(0, 0, 0, 0.05);
}

nav {
    position: absolute;
    top: 20px;
    right: 40px;
}

nav a {
    margin-left: 20px;
    text-decoration: none;
    font-weight: bold;
    color: black;
}

nav a:hover {
    text-decoration: underline;
}

.reset-box {
    width: 70%;
    max-width: 400px;
    text-align: center;
}

.reset-box h1 {
    font-size: 1.8rem;
    margin-bottom: 10px;
    color: #000;
}

.reset-box p {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 30px;
}

.reset-box label {
    display: block;
    text-align: left;
    margin: 8px 0 5px;
    font-weight: 500;
}

.input-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 20px;
}

.reset-box input {
    width: 100%;
    padding: 8px 8px;
    border: none;
    border-bottom: 2px solid #000;
    outline: none;
    font-size: 1rem;
    background-color: transparent;
}

.reset-box input::placeholder {
    color: #777;
    font-style: italic;
}

/* Toggle password visibility button */
.toggle-password-btn {
    position: absolute;
    right: 6px;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: transparent;
    cursor: pointer;
    padding: 4px;
    font-size: 0.9rem;
    color: #4daf8f;
}

.toggle-password-btn:hover {
    text-decoration: underline;
}

/* Buttons */
.reset-btn {
    margin-top: 10px;
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 8px;
    background-color: #4daf8f;
    color: white;
    font-weight: bold;
    cursor: pointer;
}

.reset-btn:hover {
    opacity: 0.9;
}

.reset-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.back-to-login {
    margin-top: 20px;
    display: block;
    text-align: center;
    font-size: 0.9rem;
    color: #4daf8f;
    text-decoration: none;
    font-weight: 500;
    cursor: pointer;
}

.back-to-login:hover {
    text-decoration: underline;
}

/* Messages */
.error-message {
    color: red;
    font-size: 0.9rem;
    margin-top: 5px;
    margin-bottom: 10px;
    text-align: center;
}

.success-message {
    color: green;
    font-size: 0.9rem;
    margin-top: 5px;
    margin-bottom: 10px;
    text-align: center;
}

.info-message {
    color: #666;
    font-size: 0.85rem;
    margin-top: 5px;
    margin-bottom: 10px;
    text-align: left;
    font-style: italic;
}

.footer {
    text-align: center;
    padding: 30px 0;
    background-color: #61c2a2;
    color: white;
    margin-top: 50px;
    font-size: 0.95rem;
}
</style>

<div class="container">
    <!-- LEFT SIDE -->
    <div class="left-panel">
        <div class="logo" @onclick="GoToHome">
            <img src="images/smartquiz-logo.png" alt="SmartQuiz Logo" />
        </div>
        <div class="illustration">
            <img src="images/student-writing.png" alt="Student Illustration" />
        </div>
    </div>

    <!-- RIGHT SIDE -->
    <div class="right-panel">
        <nav>
            <a href="/">Home</a>
            <a href="/about">About us</a>
        </nav>

        <div class="reset-box">
            <h1>Reset Password</h1>
            <p>Enter your email or username to reset your password</p>

            @if (step == 1)
            {
                <!-- Step 1: Enter email/username -->
                <label>Email or Username</label>
                <div class="input-wrapper">
                    <input type="text" placeholder="Enter your email or username" @bind="emailOrUsername" @bind:event="oninput" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">@errorMessage</div>
                }

                <button class="reset-btn" @onclick="VerifyUser" disabled="@(string.IsNullOrWhiteSpace(emailOrUsername))">
                    Continue
                </button>
            }
            else if (step == 2)
            {
                <!-- Step 2: Verify alternative password -->
                <div class="success-message">
                    ✓ User found: @foundUserName
                </div>
                <p style="margin-top: 20px; margin-bottom: 20px;">Please enter your alternative password to verify your identity</p>

                <label>Alternative Password</label>
                <div class="input-wrapper">
                    <input type="@AlternativePasswordInputType" placeholder="Enter your alternative password" @bind="alternativePassword" @bind:event="oninput" />
                    <button type="button" class="toggle-password-btn" @onclick="ToggleAlternativePasswordVisibility">
                        @(showAlternativePassword ? "Hide" : "Show")
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">@errorMessage</div>
                }

                @if (!string.IsNullOrEmpty(infoMessage))
                {
                    <div class="info-message">@infoMessage</div>
                }

                <button class="reset-btn" @onclick="VerifyAlternativePassword" disabled="@(string.IsNullOrWhiteSpace(alternativePassword))">
                    Verify
                </button>
            }
            else if (step == 3)
            {
                <!-- Step 3: Enter new password -->
                <div class="success-message">
                    ✓ Identity verified successfully!
                </div>
                <p style="margin-top: 20px; margin-bottom: 20px;">Please enter your new password</p>

                <label>New Password</label>
                <div class="input-wrapper">
                    <input type="@PasswordInputType" placeholder="Enter new password" @bind="newPassword" @bind:event="oninput" />
                    <button type="button" class="toggle-password-btn" @onclick="TogglePasswordVisibility">
                        @(showPassword ? "Hide" : "Show")
                    </button>
                </div>

                <label>Confirm New Password</label>
                <div class="input-wrapper">
                    <input type="@ConfirmPasswordInputType" placeholder="Confirm new password" @bind="confirmPassword" @bind:event="oninput" />
                    <button type="button" class="toggle-password-btn" @onclick="ToggleConfirmPasswordVisibility">
                        @(showConfirmPassword ? "Hide" : "Show")
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">@errorMessage</div>
                }

                @if (!string.IsNullOrEmpty(infoMessage))
                {
                    <div class="info-message">@infoMessage</div>
                }

                <button class="reset-btn" @onclick="ResetPassword" disabled="@(!IsPasswordFormValid())">
                    Reset Password
                </button>
            }
            else if (step == 4)
            {
                <!-- Step 4: Success -->
                <div class="success-message" style="font-size: 1.1rem; margin-bottom: 20px;">
                    ✓ Password reset successfully!
                </div>
                <p>Your password has been updated. You can now log in with your new password.</p>
                <button class="reset-btn" @onclick="GoToLogin" style="margin-top: 20px;">
                    Go to Login
                </button>
            }

            <a class="back-to-login" @onclick="GoToLogin">← Back to Login</a>
        </div>
    </div>
</div>

<div class="footer">
    © 2025 SmartQuiz | Making learning fun and interactive for everyone.
</div>

@code {
    private int step = 1; // 1 = enter email/username, 2 = verify alternative password, 3 = enter new password, 4 = success
    private string emailOrUsername = string.Empty;
    private string alternativePassword = string.Empty;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private string errorMessage = string.Empty;
    private string infoMessage = string.Empty;
    private string foundUserName = string.Empty;
    private int? foundUserId = null;

    private bool showPassword = false;
    private bool showConfirmPassword = false;
    private bool showAlternativePassword = false;
    private string PasswordInputType => showPassword ? "text" : "password";
    private string ConfirmPasswordInputType => showConfirmPassword ? "text" : "password";
    private string AlternativePasswordInputType => showAlternativePassword ? "text" : "password";

    private void TogglePasswordVisibility() => showPassword = !showPassword;
    private void ToggleConfirmPasswordVisibility() => showConfirmPassword = !showConfirmPassword;
    private void ToggleAlternativePasswordVisibility() => showAlternativePassword = !showAlternativePassword;

    private async Task VerifyUser()
    {
        errorMessage = string.Empty;
        infoMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(emailOrUsername))
        {
            errorMessage = "Please enter your email or username.";
            return;
        }

        try
        {
            // Try to find user by email or username (Student role)
            var user = await _context.Users
                .FirstOrDefaultAsync(u => 
                    (u.Email == emailOrUsername || u.Name == emailOrUsername) 
                    && u.Role == "Student");

            if (user == null)
            {
                errorMessage = "No account found with that email or username. Please check and try again.";
                return;
            }

            // User found, proceed to step 2 (verify alternative password)
            foundUserId = user.Id;
            foundUserName = user.Name ?? user.Email;
            
            // Check if user has an alternative password set
            if (string.IsNullOrWhiteSpace(user.AlternativePassword))
            {
                // If no alternative password is set, skip verification and go directly to password reset
                infoMessage = "No alternative password set. Proceeding to password reset.";
                step = 3;
            }
            else
            {
                step = 2; // Go to alternative password verification
            }
            
            Console.WriteLine($"ForgotPassword: User found - Id={user.Id}, Name={user.Name}, HasAltPassword={!string.IsNullOrWhiteSpace(user.AlternativePassword)}");
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
            Console.WriteLine($"ForgotPassword Error: {ex}");
        }
    }

    private async Task VerifyAlternativePassword()
    {
        errorMessage = string.Empty;
        infoMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(alternativePassword))
        {
            errorMessage = "Please enter your alternative password.";
            return;
        }

        if (foundUserId == null)
        {
            errorMessage = "User session expired. Please start over.";
            step = 1;
            return;
        }

        try
        {
            var user = await _context.Users.FindAsync(foundUserId.Value);
            
            if (user == null)
            {
                errorMessage = "User not found. Please start over.";
                step = 1;
                return;
            }

            // Verify alternative password
            if (user.AlternativePassword != alternativePassword)
            {
                errorMessage = "Alternative password is incorrect. Please try again.";
                return;
            }

            // Alternative password verified, proceed to step 3 (reset password)
            step = 3;
            alternativePassword = string.Empty; // Clear for security
            Console.WriteLine($"ForgotPassword: Alternative password verified for UserId={foundUserId.Value}");
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
            Console.WriteLine($"VerifyAlternativePassword Error: {ex}");
        }
    }

    private bool IsPasswordFormValid()
    {
        if (string.IsNullOrWhiteSpace(newPassword) || string.IsNullOrWhiteSpace(confirmPassword))
        {
            return false;
        }

        if (newPassword.Length < 4)
        {
            return false;
        }

        if (newPassword != confirmPassword)
        {
            return false;
        }

        return true;
    }

    private async Task ResetPassword()
    {
        errorMessage = string.Empty;
        infoMessage = string.Empty;

        // Validate passwords
        if (string.IsNullOrWhiteSpace(newPassword) || string.IsNullOrWhiteSpace(confirmPassword))
        {
            errorMessage = "Please fill in both password fields.";
            return;
        }

        if (newPassword.Length < 4)
        {
            errorMessage = "Password must be at least 4 characters long.";
            return;
        }

        if (newPassword != confirmPassword)
        {
            errorMessage = "Passwords do not match. Please try again.";
            return;
        }

        if (foundUserId == null)
        {
            errorMessage = "User session expired. Please start over.";
            step = 1;
            return;
        }

        try
        {
            // Find and update the user's password
            var user = await _context.Users.FindAsync(foundUserId.Value);
            
            if (user == null)
            {
                errorMessage = "User not found. Please start over.";
                step = 1;
                return;
            }

            // Update password
            user.Password = newPassword;
            await _context.SaveChangesAsync();

            Console.WriteLine($"ForgotPassword: Password reset successful for UserId={foundUserId.Value}");

            // Move to success step
            step = 4;
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred while resetting password: {ex.Message}";
            Console.WriteLine($"ResetPassword Error: {ex}");
        }
    }

    private void GoToLogin() => Navigation.NavigateTo("/login", true);
    private void GoToHome() => Navigation.NavigateTo("/", true);
}

