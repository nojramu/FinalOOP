<!-- MAIN CONTENT -->
<div class="main-content">
    <div class="left-panel">
        <h2 style="margin-bottom: 5px;">Create a quiz:</h2>

        @if (unpublishedQuizzes.Count == 0)
        {
            <p style="color: rgba(255,255,255,0.9); font-size: 1.1rem; margin-bottom: 20px;">
                No unpublished quizzes. Create a new quiz to get started!
            </p>
        }
        else
        {
            @foreach (var quiz in unpublishedQuizzes)
            {
                <div class="quiz-card">
                    <h3>@quiz.Title</h3>
                    <p>@quiz.Description</p>
                    <div class="quiz-buttons">
                        <button class="create-btn" type="button" @onclick="@(() => HandleEdit(quiz.Id))" @onclick:stopPropagation="true">Edit</button>
                        <button class="publish-btn" type="button" @onclick="@(async () => await HandlePublish(quiz.Id))" @onclick:stopPropagation="true">Publish</button>
                        <button class="delete-btn" type="button" @onclick="@(async () => await HandleDelete(quiz.Id))" @onclick:stopPropagation="true">Delete</button>
                    </div>
                </div>
            }
        }

        <button class="create-btn" type="button" style="width: fit-content; margin-top: 15px; cursor: pointer; position: relative; z-index: 100;" @onclick="@(() => CreateBlankQuiz())" @onclick:stopPropagation="true">
            + Create New Quiz
        </button>
    </div>

    <!-- RIGHT SIDE -->
    <div class="right-panel">
        <h1>Start creating your<br />quizzes</h1>
        <p>
            Create and customize your quiz â€” organize, refine, and make learning easy for your students starting here.
        </p>
    </div>
</div>

@code {
    private List<Quiz> unpublishedQuizzes = new();
    private string currentUserPhoto = string.Empty;

    protected override void OnInitialized()
    {
        try
        {
            // Load current user's photo
            var teacherId = UserSession.CurrentUserId ?? 0;
            if (teacherId > 0)
            {
                try
                {
                    var user = _context.Users.FirstOrDefault(u => u.Id == teacherId);
                    currentUserPhoto = user?.PhotoPath ?? string.Empty;
                }
                catch { }
            }
        }
        catch { }
        
        try
        {
            LoadUnpublishedQuizzes();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in OnInitialized: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            unpublishedQuizzes = new List<Quiz>();
        }
    }

    private void LoadUnpublishedQuizzes()
    {
        try
        {
            unpublishedQuizzes = QuizService.GetUnpublishedQuizzes();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading unpublished quizzes: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            unpublishedQuizzes = new List<Quiz>();
        }
    }

    private void CreateBlankQuiz()
    {
        try
        {
            Console.WriteLine("Creating blank quiz button clicked!");
            
            // Verify user is a teacher before proceeding
            var currentUserId = UserSession.CurrentUserId;
            var currentUserRole = UserSession.CurrentUserRole;
            Console.WriteLine($"CreateBlankQuiz: CurrentUserId={currentUserId}, CurrentUserRole={currentUserRole}");
            
            if (!UserSession.IsLoggedIn || currentUserRole != "Teacher")
            {
                var errorMsg = $"Only teachers can create quizzes. Current role: {currentUserRole ?? "Not logged in"}";
                Console.WriteLine($"âŒ {errorMsg}");
                _ = Task.Run(async () => await JSRuntime.InvokeVoidAsync("alert", $"âŒ {errorMsg}"));
                return;
            }
            
            var newQuiz = new Quiz
            {
                Title = $"New Quiz",
                Description = "Untitled quiz...",
                IsPublished = false,
                UserId = 0 // Will be set by QuizService.AddQuiz
            };
            
            Console.WriteLine("Calling QuizService.AddQuiz...");
            QuizService.AddQuiz(newQuiz);
            Console.WriteLine($"Quiz created with ID: {newQuiz.Id}");
            
            LoadUnpublishedQuizzes();
            StateHasChanged();
            Console.WriteLine("Navigating to quiz builder...");
            Navigation.NavigateTo($"/quizbuilder/{newQuiz.Id}", forceLoad: false);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"âŒ Error creating quiz: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            // Show error to user
            _ = Task.Run(async () => await JSRuntime.InvokeVoidAsync("alert", $"âŒ Error creating quiz: {ex.Message}"));
        }
    }

    private void HandleEdit(int id)
    {
        Console.WriteLine($"EDIT BUTTON CLICKED for quiz {id}");
        EditQuiz(id);
    }

    private async Task HandlePublish(int id)
    {
        Console.WriteLine($"PUBLISH BUTTON CLICKED for quiz {id}");
        await PublishQuiz(id);
    }

    private async Task HandleDelete(int id)
    {
        Console.WriteLine($"DELETE BUTTON CLICKED for quiz {id}");
        await DeleteQuiz(id);
    }

    private void EditQuiz(int id)
    {
        try
        {
            Console.WriteLine($"Editing quiz {id}");
            Navigation.NavigateTo($"/quizbuilder/{id}", forceLoad: false);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error editing quiz: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
    }

    private async Task PublishQuiz(int id)
    {
        try
        {
            Console.WriteLine($"Publishing quiz {id}");
            
            var quiz = QuizService.GetQuizById(id);
            Console.WriteLine($"Quiz found: {quiz != null}");
            
            if (quiz != null)
            {
                Console.WriteLine($"Current IsPublished status: {quiz.IsPublished}");
                quiz.IsPublished = true;
                Console.WriteLine($"Setting IsPublished to: {quiz.IsPublished}");
                
                QuizService.UpdateQuiz(quiz);
                Console.WriteLine($"Quiz {id} updated in database");
                
                // Create notifications for all students when quiz is published
                try
                {
                    // Use MasterDbContext to access Users database
                    using var usersContext = DbContextFactory.GetMasterDbContext();
                    var students = usersContext.Users
                        .Where(u => u.Role == "Student")
                        .ToList();
                    
                    Console.WriteLine($"Found {students.Count} students to notify about quiz publication");
                    
                    foreach (var student in students)
                    {
                        NotificationService.CreateNotification(
                            studentId: student.Id,
                            type: "New Quiz Published",
                            title: $"New Quiz: {quiz.Title ?? "Untitled Quiz"}",
                            message: quiz.Description ?? "A new quiz has been published and is now available.",
                            quizId: quiz.Id
                        );
                    }
                    
                    Console.WriteLine($"Created notifications for {students.Count} students about quiz {id}");
                }
                catch (Exception notifEx)
                {
                    Console.WriteLine($"Error creating notifications: {notifEx.Message}");
                    Console.WriteLine($"Stack trace: {notifEx.StackTrace}");
                    // Don't fail the publish if notifications fail
                }
                
                // Verify the update worked
                var verifyQuiz = QuizService.GetQuizById(id);
                Console.WriteLine($"Verification - IsPublished: {verifyQuiz?.IsPublished}");
                
                await Task.Delay(300); // Small delay to ensure save completes
                LoadUnpublishedQuizzes(); // Refresh the list to remove published quiz
                await InvokeAsync(StateHasChanged);
                Console.WriteLine($"Quiz {id} published! Navigating...");
                
                Navigation.NavigateTo("/view-quizzes", forceLoad: false);
            }
            else
            {
                Console.WriteLine($"Quiz {id} not found!");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error publishing quiz: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            await InvokeAsync(() => StateHasChanged());
        }
    }

    private async Task DeleteQuiz(int id)
    {
        try
        {
            // Confirm deletion using JavaScript
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to permanently delete this quiz? This action cannot be undone.");
            
            if (!confirmed)
            {
                return;
            }

            Console.WriteLine($"Deleting quiz {id}");
            
            QuizService.DeleteQuiz(id);
            Console.WriteLine($"Quiz {id} deleted from database");
            
            await Task.Delay(200); // Small delay to ensure delete completes
            LoadUnpublishedQuizzes(); // Refresh the list
            await InvokeAsync(StateHasChanged); // Refresh the UI to reflect the deletion
            Console.WriteLine($"Quiz {id} deleted! UI refreshed");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting quiz: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
    }
}
