@page "/createquiz"
@using SmartQuiz.Models
@using SmartQuiz.Services
@inject NavigationManager Navigation
@inject QuizService QuizService
@inject UserSessionService UserSession
@inject SmartQuiz.Data.AppDbContext _context
@inject NotificationService NotificationService
@inject DbContextFactory DbContextFactory
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<style>
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    background: #61c2a2;
    min-height: 100vh;
}

/* NAVBAR */
.navbar {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 15px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.2);
}

.nav-left {
    display: flex;
    align-items: center;
}

.profile-icon {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    margin-right: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
    overflow: hidden;
}

.profile-photo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 12px;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.nav-links a {
    margin-left: 30px;
    text-decoration: none;
    color: #333;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 20px;
    transition: all 0.3s ease;
    position: relative;
}

.nav-links a:hover {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
}

.logout {
    color: #e74c3c !important;
    font-weight: 600;
}

.logout:hover {
    background: #e74c3c !important;
    color: white !important;
}

/* MAIN LAYOUT */
.main-content {
    display: flex;
    min-height: calc(100vh - 90px);
    padding: 50px 40px;
}

/* LEFT SIDE: QUIZ CARDS */
.left-panel {
    flex: 0.7;
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.left-panel h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 10px;
}

.quiz-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255,255,255,0.2);
    position: relative;
    overflow: visible;
    animation: fadeInUp 0.6s ease forwards;
}

.quiz-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #61c2a2, #48a583, #667eea);
    border-radius: 20px 20px 0 0;
    pointer-events: none;
    z-index: 1;
}

.quiz-card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.quiz-card h3 {
    font-size: 1.2rem;
    margin-bottom: 12px;
    font-weight: 700;
    color: #2c3e50;
    display: flex;
    align-items: center;
    gap: 10px;
}

.quiz-card h3::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, #61c2a2, #48a583);
    border-radius: 2px;
}

.quiz-card p {
    font-size: 0.95rem;
    color: #7f8c8d;
    line-height: 1.5;
    margin-bottom: 15px;
}

/* Buttons inside quiz card */
.quiz-buttons {
    display: flex;
    gap: 10px;
    position: relative;
    z-index: 100;
}

.quiz-buttons button {
    padding: 10px 20px;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(97, 194, 162, 0.3);
    position: relative;
    z-index: 101;
    pointer-events: auto;
}

.create-btn {
    background: linear-gradient(135deg, #61c2a2, #48a583);
    color: #fff;
    cursor: pointer;
    pointer-events: auto;
    position: relative;
    z-index: 100;
}

.publish-btn {
    background: linear-gradient(135deg, #48a583, #61c2a2);
    color: #fff;
}

.delete-btn {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: #fff;
}

.create-btn:hover, .publish-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(97, 194, 162, 0.4);
}

.delete-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
}

/* RIGHT SIDE */
.right-panel {
    flex: 1.3;
    padding-left: 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.right-panel h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
    color: white;
}

.right-panel p {
    color: rgba(255,255,255,0.9);
    font-size: 1.1rem;
    line-height: 1.6;
    width: 90%;
    font-weight: 300;
}


/* Responsive Design */
@@media (max-width: 768px) {
    .main-content {
        flex-direction: column;
        padding: 30px 20px;
    }
    
    .navbar {
        padding: 10px 20px;
    }
    
    .nav-links a {
        margin-left: 15px;
        padding: 6px 12px;
        font-size: 0.9rem;
    }
    
    .right-panel {
        padding-left: 0;
        margin-top: 30px;
    }
    
    .right-panel h1 {
        font-size: 2.2rem;
    }
    
    .left-panel {
        flex: 1;
    }
}

/* Animation */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.quiz-card:nth-child(1) { animation-delay: 0.1s; }
.quiz-card:nth-child(2) { animation-delay: 0.2s; }
.quiz-card:nth-child(3) { animation-delay: 0.3s; }
.quiz-card:nth-child(4) { animation-delay: 0.4s; }
</style>

